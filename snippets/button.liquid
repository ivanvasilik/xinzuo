{%- doc -%}
  Intended for use in a block similar to the button block.

  @param {string} link - link to render
  @param {object} [block] - The block

  @example
  {% render 'button', link: '/collections/all' %}
{%- enddoc -%}

{% assign block_settings = block.settings %}

<a
  {% if link == blank %}
    role="link"
    aria-disabled="true"
  {% else %}
    href="{{ link }}"
  {% endif %}
  class="
    size-style
    {{ block_settings.style_class }}
    {{ block_settings.style_class }}--{{ block.id }}
  "
  style="{% render 'size-style', settings: block_settings %} {% if block.settings.btn_icon != 'none' %}display: flex; gap: 6px; align-items: center;{% endif %}"
  {%- if block_settings.open_in_new_tab -%}
    target="_blank"
    rel="noopener noreferrer"
  {%- endif -%}
  {{ block.shopify_attributes }}
>
  {{ block_settings.label }}
  {% if block.settings.btn_icon == "below" %}
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
      <g clip-path="url(#clip0_4030_26684)">
        <path d="M10 3.39111V17.1411" stroke="#fff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M4.375 11.5161L10 17.1411L15.625 11.5161" stroke="#fff" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </g>
      <defs>
        <clipPath id="clip0_4030_26684">
          <rect width="20" height="20" fill="white" transform="translate(0 0.266113)"/>
        </clipPath>
      </defs>
    </svg>
  {% elsif block.settings.btn_icon == "top" %}
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
      <g clip-path="url(#clip0_4030_26771)">
        <path d="M5 15.5L15 5.5" stroke="#C1C4C7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
        <path d="M6.875 5.5H15V13.625" stroke="#C1C4C7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
      </g>
      <defs>
        <clipPath id="clip0_4030_26771">
          <rect width="20" height="20" fill="white" transform="translate(0 0.5)"/>
        </clipPath>
      </defs>
    </svg>
  {% endif %}
</a>

{% stylesheet %}
  .link {
    text-decoration: none;
    text-decoration-color: currentcolor;

    &:hover {
      color: var(--color-primary-hover);
      text-decoration-color: transparent;
    }
  }
{% endstylesheet %}
