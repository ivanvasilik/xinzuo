    }

    .delivery-estimate-destination {
      font-size: 9.6px;
    }

    .delivery-estimate-input {
      font-size: 14px;
      padding: 8px 10px;
    }

    .delivery-estimate-button {
      padding: 8px 12px;
      font-size: 12px;
    }
  }
</style>

