
{% liquid
  assign cutoff_time = settings.cutoff_time | default: '12:00'
  assign enable_public_holidays = settings.enable_public_holidays | default: true
  assign show_icon = settings.show_icon | default: true
  assign background_color = settings.background_color | default: '#292a33'
  assign border_color = settings.border_color | default: '#3a3b47'
  assign border_radius = settings.border_radius | default: 8
%}

<script src="{{ 'delivery-estimate.js' | asset_url }}" type="module"></script>

<delivery-estimate-component
  data-cutoff-time="{{ cutoff_time }}"
  data-enable-holidays="{{ enable_public_holidays }}"
>
  <div
    class="delivery-estimate-container"
    style="
      --delivery-bg-color: {{ background_color }};
      --delivery-border-color: {{ border_color }};
      --delivery-border-radius: {{ border_radius }}px;
    "
  >
    {% if show_icon %}
      <div class="delivery-estimate-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M7 17L17 7M17 7H9M17 7V15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          <path d="M21 10V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H14" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    {% endif %}

    <div class="delivery-estimate-content">
      <div class="delivery-estimate-header">
        <h3>Check Delivery Estimate</h3>
        <p class="delivery-estimate-subtitle">Your postcode may be auto-detected, or enter it manually</p>
      </div>

      <div class="delivery-estimate-input-group">
        <input
          type="text"
          class="delivery-estimate-input"
          placeholder="Enter postcode (e.g., 4000)"
          maxlength="4"
          pattern="[0-9]{4}"
          ref="postcodeInput"
          aria-label="Postcode"
        />
        <button
          type="button"
          class="delivery-estimate-button delivery-estimate-button--secondary"
          ref="detectLocationButton"
          aria-label="Detect my location"
          title="Use my location to auto-fill postcode"
        >
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M8 14C11.3137 14 14 11.3137 14 8C14 4.68629 11.3137 2 8 2C4.68629 2 2 4.68629 2 8C2 11.3137 4.68629 14 8 14Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M8 10C9.10457 10 10 9.10457 10 8C10 6.89543 9.10457 6 8 6C6.89543 6 6 6.89543 6 8C6 9.10457 6.89543 10 8 10Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M8 1V2M8 14V15M15 8H14M2 8H1" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button
          type="button"
          class="delivery-estimate-button"
          ref="checkButton"
        >
          Check
        </button>
      </div>

      <div
        class="delivery-estimate-result"
        ref="resultContainer"
        style="display: none;"
      >
        <div class="delivery-estimate-result-icon">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M16.6666 5L7.49998 14.1667L3.33331 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
        <div class="delivery-estimate-result-content">
          <p class="delivery-estimate-result-title" ref="resultTitle"></p>
          <p class="delivery-estimate-result-details" ref="resultDetails"></p>
        </div>
      </div>

      <div
        class="delivery-estimate-error"
        ref="errorContainer"
        style="display: none;"
      >
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 6V10M10 14H10.01M19 10C19 14.9706 14.9706 19 10 19C5.02944 19 1 14.9706 1 10C1 5.02944 5.02944 1 10 1C14.9706 1 19 5.02944 19 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <p ref="errorMessage"></p>
      </div>
    </div>
  </div>
</delivery-estimate-component>

<style>
  .delivery-estimate-container {
    display: flex;
    gap: 16px;
    padding: 20px;
    background-color: var(--delivery-bg-color);
    border: 1px solid var(--delivery-border-color);
    border-radius: var(--delivery-border-radius);
    font-family: var(--font-body--family, sans-serif);
  }

  @media (max-width: 749px) {
    .delivery-estimate-container {
      flex-direction: column;
      gap: 12px;
      padding: 16px;
    }
  }

  .delivery-estimate-icon {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 8px;
  }

  @media (max-width: 749px) {
    .delivery-estimate-icon {
      display: none;
    }
  }

  .delivery-estimate-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .delivery-estimate-header h3 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    color: #ffffff;
    line-height: 1.3;
    font-family: "Sen", sans-serif;
  }

  @media (max-width: 749px) {
    .delivery-estimate-header h3 {
      font-size: 16px;
    }
  }

  .delivery-estimate-subtitle {
    margin: 4px 0 0 0;
    font-size: 14px;
    color: #c9c9cc;
    line-height: 1.4;
    font-family: "Albert Sans", sans-serif;
  }

  @media (max-width: 749px) {
    .delivery-estimate-subtitle {
      font-size: 13px;
    }
  }

  .delivery-estimate-input-group {
    display: flex;
    gap: 8px;
    align-items: stretch;
  }

  @media (max-width: 749px) {
    .delivery-estimate-input-group {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 8px;
    }
  }

  .delivery-estimate-input {
    flex: 1;
    padding: 12px 16px;
    font-size: 16px;
    border: 1px solid #3a3b47;
    border-radius: 6px;
    outline: none;
    transition: border-color 0.2s, background-color 0.2s;
    font-family: "Albert Sans", sans-serif;
    background-color: #1f2029;
    color: #ffffff;
  }

  .delivery-estimate-input::placeholder {
    color: #6b7280;
  }

  .delivery-estimate-input:focus {
    border-color: #ffffff;
    box-shadow: 0 0 0 2px rgba(255, 255, 255, 0.1);
  }

  @media (max-width: 749px) {
    .delivery-estimate-input {
      width: 100%;
      padding: 14px 16px;
      font-size: 16px;
    }
  }

  .delivery-estimate-button {
    padding: 12px 32px;
    font-size: 16px;
    font-weight: 600;
    color: white;
    background-color: #2563eb;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.2s;
    white-space: nowrap;
    font-family: "Sen", sans-serif;
  }

  .delivery-estimate-button:hover {
    background-color: #1d4ed8;
  }

  .delivery-estimate-button:active {
    background-color: #1e40af;
  }

  .delivery-estimate-button--secondary {
    padding: 12px;
    width: auto;
    min-width: 48px;
    background-color: #3a3b47;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .delivery-estimate-button--secondary:hover {
    background-color: #4a4b57;
  }

  .delivery-estimate-button--secondary:active {
    background-color: #2a2b37;
  }

  .delivery-estimate-button--secondary svg {
    flex-shrink: 0;
  }

  @media (max-width: 749px) {
    .delivery-estimate-button {
      padding: 14px 24px;
    }

    .delivery-estimate-button--secondary {
      grid-column: 2;
      grid-row: 1;
      padding: 14px;
    }

    .delivery-estimate-button:not(.delivery-estimate-button--secondary) {
      grid-column: 1 / -1;
      grid-row: 2;
    }
  }

  .delivery-estimate-result {
    display: flex;
    gap: 12px;
    padding: 16px;
    background-color: rgba(16, 185, 129, 0.1);
    border: 1px solid rgba(16, 185, 129, 0.3);
    border-radius: 6px;
    animation: slideIn 0.3s ease-out;
  }

  @media (max-width: 749px) {
    .delivery-estimate-result {
      padding: 12px;
    }
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .delivery-estimate-result-icon {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    color: #10b981;
  }

  .delivery-estimate-result-content {
    flex: 1;
  }

  .delivery-estimate-result-title {
    margin: 0;
    font-size: 15px;
    font-weight: 600;
    color: #ffffff;
    line-height: 1.4;
    font-family: "Sen", sans-serif;
  }

  @media (max-width: 749px) {
    .delivery-estimate-result-title {
      font-size: 14px;
    }
  }

  .delivery-estimate-result-details {
    margin: 4px 0 0 0;
    font-size: 14px;
    color: #c9c9cc;
    line-height: 1.4;
    font-family: "Albert Sans", sans-serif;
  }

  @media (max-width: 749px) {
    .delivery-estimate-result-details {
      font-size: 13px;
    }
  }

  .delivery-estimate-error {
    display: flex;
    gap: 12px;
    padding: 12px;
    background-color: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 6px;
    color: #ffffff;
    font-size: 14px;
    animation: slideIn 0.3s ease-out;
    font-family: "Albert Sans", sans-serif;
  }

  .delivery-estimate-error svg {
    flex-shrink: 0;
    color: #ef4444;
  }

  .delivery-estimate-error p {
    margin: 0;
    line-height: 1.4;
  }

  @media (max-width: 749px) {
    .delivery-estimate-error {
      font-size: 13px;
    }
  }
</style>

