{% comment %} Theme Version: 3.0.2 - Performance Optimization {% endcomment %}
<!doctype html>
<html
  class="no-js{% if request.design_mode %} shopify-design-mode{% endif %}"
  lang="{{ request.locale.iso_code }}"
>
  <head>
    {% comment %} Google Fonts - MUST be first for fastest FCP {% endcomment %}
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Albert+Sans:wght@400;600;700&family=Sen:wght@400;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'" fetchpriority="high">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Albert+Sans:wght@400;600;700&family=Sen:wght@400;600;700&display=swap"></noscript>

    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} View transition render blocker - disabled for performance {% endcomment %}
    {% if request.design_mode %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >
    {% endif %}

    {%- render 'meta-tags' -%}

    <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">

    {% comment %} Preload LCP hero image for mobile - reduces resource load delay {% endcomment %}
    {% if template.name == 'index' %}
      <link rel="preload" as="image" fetchpriority="high" href="https://xinzuo.com.au/cdn/shop/files/IMG_5941_1.png?v=1760704595&width=800" media="(max-width: 480px)">
    {% endif %}

    {%- render 'stylesheets' -%}
    {%- render 'fonts' -%}

    {% comment %} Comprehensive Critical CSS - enables async styles.css loading {% endcomment %}
    <style>
      /* === BASE RESET === */
      *, *::before, *::after { box-sizing: border-box; }
      html { scroll-behavior: smooth; }
      body {
        margin: 0;
        display: flex;
        flex-direction: column;
        min-height: 100svh;
        background: #111;
        color: #fff;
        font-family: 'Albert Sans', sans-serif;
        --header-height: 77px;
        --color-foreground: #fff;
        --color-background: #111;
        --padding-sm: 0.7rem;
        --padding-lg: 1rem;
        --gap-xl: 1.25rem;
      }
      img, picture { display: block; max-width: 100%; }
      img { width: 100%; height: auto; }
      a { color: inherit; text-decoration: none; }
      button { font-family: inherit; }

      /* === LAYOUT === */
      .content-for-layout { flex: 1; }
      #header-group { position: relative; z-index: 100; }
      .section { padding: 0; }
      .section--full-width-margin { width: 100%; }
      .shopify-section { display: block; }

      /* === HEADER CRITICAL STYLES === */
      .header-section { position: relative; }
      .header { display: block; }
      .header__row {
        position: relative;
        background-color: #292a33;
      }
      .header__columns {
        display: grid;
        grid-template-areas: 'left center right';
        grid-template-columns: 1fr auto 1fr;
        gap: var(--gap-xl);
        height: 77px;
        padding: var(--padding-sm) var(--padding-lg);
        align-items: center;
      }
      .header__column { display: flex; align-items: center; }
      .header__column--left { grid-area: left; gap: var(--gap-xl); }
      .header__column--center { grid-area: center; justify-content: center; }
      .header__column--right { grid-area: right; justify-content: flex-end; gap: var(--gap-xl); }

      /* Header logo */
      .header-logo { display: flex; align-items: center; }
      .header-logo__image { max-height: 50px; width: auto; }

      /* Header icons/actions */
      .header-actions { display: flex; align-items: center; gap: 0.5rem; }
      .header-actions__action {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 44px;
        height: 44px;
        background: none;
        border: none;
        color: inherit;
        cursor: pointer;
      }
      .header__icon--menu { display: none; }

      /* Mobile header */
      @media (max-width: 749px) {
        .header__columns {
          grid-template-columns: 44px 44px 1fr 44px 44px;
          grid-template-areas: 'leftA leftB center rightA rightB';
          padding: 0 0.25rem;
        }
        .header__column { display: contents; }
        .header-logo { grid-area: center; justify-content: center; }
        .header__icon--menu { display: flex; grid-area: leftA; }
        header-actions { grid-area: rightB; }
        header-menu { display: none; }
        .mobile\:hidden, .desktop\:visible { display: none !important; }
      }

      {% if template.name == 'index' %}
      /* === HOMEPAGE HERO CRITICAL STYLES === */
      .hero-banner {
        display: flex;
        justify-content: center;
        background: #232325;
        height: calc(100vh - 77px);
        margin: auto;
        position: relative;
      }
      .hero-banner-img { width: 100%; }
      .hero-banner-img img {
        height: 100%;
        width: 100%;
        object-fit: cover;
      }
      .hero-banner-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 500px;
        position: absolute;
        top: 0;
        right: 54%;
        height: 100%;
        z-index: 1;
        color: #fff;
      }
      .hero-banner-content span { font-size: 18px; color: #c9c9cc; }
      .hero-banner-content .mobile { display: none; }
      .hero-banner-content .desktop { display: block; }
      .hero-cta-button {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background-color: #ff0004;
        border: none;
        border-radius: 4px;
        font-family: 'Sen', sans-serif;
        font-weight: 600;
        font-size: 14px;
        color: #fff;
        margin-top: 16px;
        width: fit-content;
      }

      /* Hero responsive */
      @media (max-width: 1440px) { .hero-banner { height: auto; } }
      @media (max-width: 1150px) {
        .hero-banner-content { width: 400px; right: unset; left: 50px; }
      }
      @media (max-width: 1000px) {
        .hero-banner-content { justify-content: flex-end; width: calc(100% - 100px); }
        .hero-cta-button { margin-bottom: 60px; }
      }
      @media (max-width: 850px) {
        .hero-banner { justify-content: flex-end; height: 65vh; }
      }
      @media (max-width: 760px) {
        .hero-banner-content { left: 25px; }
        .hero-banner-content .desktop { display: none; }
        .hero-banner-content .mobile { display: block; }
      }
      @media (max-width: 600px) { .hero-banner { height: 55vh; } }
      @media (max-width: 480px) { .hero-banner { height: auto; } }
      {% endif %}
    </style>

    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {% unless request.design_mode %}
      {%- render 'defer-third-party' -%}
    {% endunless %}

    {{ content_for_header }}

    {% comment %} Swiper: Only load on pages that need it (product, cart, collection pages) {% endcomment %}
    {% if template.name == 'product' or template.name == 'cart' or template.name == 'collection' %}
      <link rel="preload" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" as="style" onload="this.onload=null;this.rel='stylesheet'">
      <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"></noscript>
      <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js" defer></script>
    {% endif %}


    {% comment %} Judge.me CSS: Only load on product pages {% endcomment %}
    {% if template.name == 'product' %}
      <link rel="preload" href="{{ 'judge.css' | asset_url }}" as="style" onload="this.onload=null;this.rel='stylesheet'">
      <noscript><link rel="stylesheet" href="{{ 'judge.css' | asset_url }}"></noscript>
    {% endif %}

    {% comment %} Critical CSS: Prevent layout shift on product pages {% endcomment %}
    {% if request.path contains '/products/' %}
      <style>
        /* Prevent layout shift: Force correct mobile layout before JavaScript runs */
        @media screen and (max-width: 749px) {
          /* Hide desktop-only elements immediately */
          .mobile\:hidden,
          .hidden--mobile {
            display: none !important;
          }
          
          /* Override grid layout for thumbnails on mobile - force flow layout */
          slideshow-component:has(slideshow-controls[pagination-position="left"]),
          slideshow-component:has(slideshow-controls[pagination-position="right"]) {
            display: block !important;
            grid-template: none !important;
          }
          
          /* Force thumbnails to center position styling on mobile */
          slideshow-controls[thumbnails][pagination-position="left"],
          slideshow-controls[thumbnails][pagination-position="right"] {
            order: 0 !important;
            display: block !important;
            height: auto !important;
            min-height: 0 !important;
          }
          
          /* Force thumbnail container to horizontal scroll on mobile */
          slideshow-controls[thumbnails][pagination-position="left"] .slideshow-controls__thumbnails-container,
          slideshow-controls[thumbnails][pagination-position="right"] .slideshow-controls__thumbnails-container {
            overflow: auto hidden !important;
          }
          
          /* Force thumbnails to horizontal layout on mobile */
          slideshow-controls[thumbnails][pagination-position="left"] .slideshow-controls__thumbnails,
          slideshow-controls[thumbnails][pagination-position="right"] .slideshow-controls__thumbnails {
            flex-direction: row !important;
            padding-inline: var(--slideshow-thumbnails-padding-inline, var(--padding-sm)) !important;
            padding-block: var(--slideshow-thumbnails-padding-block, var(--padding-sm)) !important;
          }
        }
      </style>
      
      <script>
        const imageThumbnail = () => {
            const thumbnail = document.querySelector("slideshow-controls");
            if (thumbnail) {
                if (window.innerWidth > 750) {
                    thumbnail.setAttribute("pagination-position", "left");
                }
                else {
                    thumbnail.setAttribute("pagination-position", "center");
                }
            }
        }

        window.addEventListener('DOMContentLoaded', () => {
            imageThumbnail();
        });

        window.addEventListener('resize', imageThumbnail());
      </script>
    {% endif %}
  </head>

  <body class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script src="{{ 'critical.js' | asset_url }}" type="module" defer></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}

    {% comment %} Cart engraving modal - must be at body level to appear above cart drawer dialog {% endcomment %}
    {% render 'cart-engraving-modal' %}
  </body>
</html>

