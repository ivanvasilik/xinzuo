{%- liquid
  assign product = closest.product
  assign block_settings = block.settings
-%}

<div class="product-features-block" {{ block.shopify_attributes }}>
  <div class="features-row">
    <div class="feature-item">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="feature-icon">
        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z" />
      </svg>
      <span class="feature-text">{{ block_settings.feature_1_text | default: "30-day returns" }}</span>
    </div>
    
    <div class="feature-item">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="feature-icon">
        <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 0 1-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 0 1-3 0m3 0a1.5 1.5 0 0 0-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 0 0-3.213-9.193 2.056 2.056 0 0 0-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 0 0-10.026 0 1.106 1.106 0 0 0-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
      </svg>
      <span class="feature-text">{{ block_settings.feature_2_text | default: "Fast & free delivery" }}</span>
    </div>
    
    <div class="feature-item">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="feature-icon">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
      </svg>
      <span class="feature-text">{{ block_settings.feature_3_text | default: "Lifetime warranty" }}</span>
    </div>
  </div>
</div>

{% style %}
  .product-features-block {
    width: 100%;
  }

  .features-row {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: {{ block_settings.gap | default: 24 }}px;
    row-gap: 12px;
    flex-wrap: wrap;
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: {{ block_settings.icon_text_gap | default: 8 }}px;
  }

  .feature-item:nth-child(3) {
    flex-basis: 100%;
    justify-content: center;
  }

  .feature-icon {
    width: {{ block_settings.icon_size | default: 20 }}px;
    height: {{ block_settings.icon_size | default: 20 }}px;
    color: {{ block_settings.icon_color | default: '#c9c9cc' }};
    flex-shrink: 0;
  }

  .feature-text {
    font-family: "Albert Sans";
    font-size: {{ block_settings.text_size | default: 14 }}px;
    font-weight: 400;
    color: {{ block_settings.text_color | default: '#c9c9cc' }};
    line-height: 1.4;
    white-space: nowrap;
  }

  @media screen and (max-width: 750px) {
    .features-row {
      gap: 12px;
      row-gap: 12px;
      justify-content: center;
    }

    .feature-item:nth-child(1),
    .feature-item:nth-child(2) {
      flex: 0 1 auto;
    }

    .feature-item:nth-child(3) {
      flex-basis: 100%;
      justify-content: center;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Product Features",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Feature Text"
    },
    {
      "type": "text",
      "id": "feature_1_text",
      "label": "Feature 1 (Calendar Icon)",
      "default": "30-day returns"
    },
    {
      "type": "text",
      "id": "feature_2_text",
      "label": "Feature 2 (Delivery Icon)",
      "default": "Fast & free delivery"
    },
    {
      "type": "text",
      "id": "feature_3_text",
      "label": "Feature 3 (Shield Icon)",
      "default": "Lifetime warranty"
    },
    {
      "type": "header",
      "content": "Styling"
    },
    {
      "type": "range",
      "id": "icon_size",
      "label": "Icon Size",
      "min": 16,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Size",
      "min": 11,
      "max": 18,
      "step": 1,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap Between Items",
      "min": 12,
      "max": 48,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "icon_text_gap",
      "label": "Gap Between Icon and Text",
      "min": 4,
      "max": 16,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "color",
      "id": "icon_color",
      "label": "Icon Color",
      "default": "#c9c9cc"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#c9c9cc"
    }
  ]
}
{% endschema %}

