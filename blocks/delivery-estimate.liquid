
{% liquid
  assign block_settings = block.settings
%}

<div
  class="delivery-estimate-block"
  {{ block.shopify_attributes }}
>
  {% render 'delivery-estimate-calculator', settings: block_settings %}
</div>

{% stylesheet %}
  .delivery-estimate-block {
    width: 100%;
    margin-top: 16px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Delivery Estimate",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Delivery Settings"
    },
    {
      "type": "text",
      "id": "cutoff_time",
      "label": "Order cutoff time (24h format)",
      "default": "12:00",
      "info": "Orders placed before this time are eligible for next-day delivery"
    },
    {
      "type": "checkbox",
      "id": "enable_public_holidays",
      "label": "Account for public holidays",
      "default": true,
      "info": "Automatically skip Australian public holidays when calculating delivery dates"
    },
    {
      "type": "header",
      "content": "Appearance"
    },
    {
      "type": "checkbox",
      "id": "show_icon",
      "label": "Show delivery icon",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#292a33"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#3a3b47"
    },
    {
      "type": "range",
      "id": "border_radius",
      "label": "Border radius",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "default": 8
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Delivery Estimate",
      "category": "Product"
    }
  ]
}
{% endschema %}

