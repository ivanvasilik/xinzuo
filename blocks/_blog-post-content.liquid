

<div class="blog-post-content rte">
  <rte-formatter>
    {{ article.content }}
  </rte-formatter>
</div>

{% stylesheet %}
  .blog-post-content {
    --blog-content-width: var(--normal-content-width);
    max-width: var(--blog-content-width);
    margin: 0 auto;
  }

  /* Enhanced Typography */
  .blog-post-content.rte {
    font-size: 17px;
    line-height: 1.7;
  }

  .blog-post-content.rte p {
    margin-bottom: 1.5em;
  }

  .blog-post-content.rte p:last-child {
    margin-bottom: 0;
  }

  /* Heading Enhancements */
  .blog-post-content.rte h2 {
    margin-top: 2.5em;
    margin-bottom: 1em;
    padding-bottom: 0.5em;
    border-bottom: 2px solid rgb(var(--color-foreground-rgb) / 0.15);
  }

  .blog-post-content.rte h3 {
    margin-top: 2em;
    margin-bottom: 0.75em;
    letter-spacing: 0.02em;
  }

  .blog-post-content.rte h4,
  .blog-post-content.rte h5,
  .blog-post-content.rte h6 {
    margin-top: 1.75em;
    margin-bottom: 0.75em;
  }

  /* Enhanced Link Styling */
  .blog-post-content.rte a {
    color: var(--color-link);
    text-decoration: underline;
    text-decoration-color: rgb(var(--color-foreground-rgb) / 0.3);
    text-underline-offset: 0.2em;
    transition: all 0.2s ease;
  }

  .blog-post-content.rte a:hover {
    color: var(--color-link-hover);
    text-decoration-color: var(--color-link-hover);
  }

  /* Strong/Bold Enhancement */
  .blog-post-content.rte strong {
    font-weight: 600;
    color: rgb(var(--color-foreground-rgb) / 0.95);
  }

  /* Image Styling */
  .blog-post-content.rte img {
    max-width: 100%;
    height: auto;
    display: block;
    margin: 2.5rem auto;
    border-radius: 8px;
    box-shadow: 0 4px 12px rgb(0 0 0 / 0.15);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
  }

  .blog-post-content.rte img:hover {
    box-shadow: 0 8px 24px rgb(0 0 0 / 0.25);
    transform: translateY(-2px);
  }

  /* Figure and Figcaption Support */
  .blog-post-content.rte figure {
    margin: 2.5rem 0;
  }

  .blog-post-content.rte figcaption {
    margin-top: 0.75rem;
    font-size: 0.875rem;
    color: rgb(var(--color-foreground-rgb) / 0.65);
    text-align: center;
    font-style: italic;
  }

  /* Enhanced Blockquote Styling */
  .blog-post-content.rte blockquote {
    margin: 2.5em 0;
    padding: 1.5em 1.5em 1.5em 2em;
    border-left: 4px solid var(--color-link);
    background: rgb(var(--color-foreground-rgb) / 0.03);
    border-radius: 0 8px 8px 0;
    font-size: 1.1em;
    font-style: italic;
    font-weight: 500;
  }

  .blog-post-content.rte blockquote p {
    margin-bottom: 0;
  }

  /* List Improvements */
  .blog-post-content.rte ul,
  .blog-post-content.rte ol {
    margin-bottom: 1.5em;
    padding-left: 1.75em;
  }

  .blog-post-content.rte li {
    margin-bottom: 0.75em;
  }

  .blog-post-content.rte li:last-child {
    margin-bottom: 0;
  }

  .blog-post-content.rte ul > li::marker {
    color: var(--color-link);
  }

  /* Callout Box Styling */
  .blog-post-content.rte > p:has(strong:first-child) {
    padding: 1.25em 1.5em;
    background: rgb(var(--color-foreground-rgb) / 0.05);
    border-left: 4px solid var(--color-link);
    border-radius: 8px;
    margin-block: 2em;
  }

  /* Code Blocks */
  .blog-post-content.rte code {
    padding: 0.2em 0.4em;
    background: rgb(var(--color-foreground-rgb) / 0.08);
    border-radius: 4px;
    font-size: 0.9em;
    font-family: monospace;
  }

  .blog-post-content.rte pre {
    margin: 2em 0;
    padding: 1.5em;
    background: rgb(var(--color-foreground-rgb) / 0.05);
    border-radius: 8px;
    overflow-x: auto;
  }

  .blog-post-content.rte pre code {
    padding: 0;
    background: none;
  }

  /* Horizontal Rule */
  .blog-post-content.rte hr {
    margin: 3em 0;
    border: none;
    border-top: 1px solid rgb(var(--color-foreground-rgb) / 0.15);
  }

  /* Responsive Adjustments */
  @media screen and (max-width: 749px) {
    .blog-post-content.rte {
      font-size: 16px;
    }

    .blog-post-content.rte img {
      margin: 2rem auto;
      border-radius: 6px;
    }

    .blog-post-content.rte blockquote {
      margin: 2em 0;
      padding: 1.25em 1.25em 1.25em 1.5em;
      font-size: 1.05em;
    }

    .blog-post-content.rte h2 {
      margin-top: 2em;
    }

    .blog-post-content.rte h3 {
      margin-top: 1.75em;
    }
  }
{% endstylesheet %}

