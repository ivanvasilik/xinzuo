{% style %}
  .product-details span {
    font-family: "Sen";
    font-weight: 400;
    font-size: 14px;
    color: #c9c9cc;
  }

  .product-details h2 {
    font-family: "Sen";
    font-weight: 600;
    font-size: 36px;
    line-height: 135%;
    color: #fff;
    margin: 0;
  }

  .product-details p {
    font-family: "Albert Sans";
    font-weight: 400;
    font-size: 16px;
    margin: 0;
  }

  .product-details li {
    font-family: "Albert Sans";
    font-weight: 400;
    font-size: 16px;
    margin: 0;
  }

  .product-details h3 {
    font-family: "Sen";
    font-weight: 600;
    font-size: 28px;
    margin: 0;
    padding: 20px 0;
  }

  .product-details h5 {
    font-family: "Sen";
    font-weight: 600;
    font-size: 22px;
    color: #c9c9cc;
    text-decoration-line: line-through;
  }

  .product-details h4 {
    font-family: "Sen";
    font-weight: 600;
    font-size: 16px;
    color: #fff;
  }

  .product-details-prices {
    display: flex;
    align-items: flex-end;
    gap: 12px;
  }
  
  .product-details-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }

  .product-details-links > span {
    display: flex;
    gap: 6px;
  }

  .product-details-links a {
    color: #c9c9cc;
  }

  .product-details-header h2 {
    margin-bottom: 0;
  }

  .product-details-prices h4 {
    font-family: "Sen";
    font-weight: 600;
    font-size: 22px;
    margin-bottom: 7px;
    margin-top: 0;
    text-decoration-line: line-through;
    text-decoration-thickness: 1.5px;
    color: #c9c9cc;
    opacity: 0.4;
  }

  .product-afterpay-message {
    display: flex;
    align-items: center;
    gap: 6px;
    flex-wrap: wrap;
    margin-top: 8px;
    margin-bottom: 12px;
  }

  .product-afterpay-message .afterpay-text {
    font-family: "Albert Sans";
    font-size: 12px;
    font-weight: 400;
    color: #c9c9cc;
    line-height: 1.4;
  }

  .product-afterpay-message .afterpay-logo {
    width: 64px;
    height: auto;
    display: inline-block;
    vertical-align: middle;
  }

  @media screen and (min-width: 750px) {
    .product-afterpay-message .afterpay-text {
      font-size: 13px;
    }

    .product-afterpay-message .afterpay-logo {
      width: 70px;
    }
  }

  .product-details-shipping {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .product-shipping-header {
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .product-shipping-header > span {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .product-shipping-header > span > b {
    color: #fff;
    font-weight: 500;
  }

  .product-shipping-header > span strong {
    font-weight: 500;
    color: #fff;
  }

  .product-shipping-header span span {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 4px 0;
    border-bottom: 1px solid 
  }

  .product-shipping-content img {
    width: 20px;
    height: 20px;
  }

  .product-shipping-content {
    padding: 20px 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    background-color: #292a33;
  }

  .product-shipping-content div {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .product-details-info {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .product-details-info > span {
    font-size: 16px;
  }

  .product-detail_info-divs {
    display: flex;
    gap: 16px;
  }

  .product-detail_info-div {
    width: calc(100% / 3 - 32px / 3);
    text-align: center;
  }

  .product-detail_info-div img {
    width: 64px;
    height: 64px;
    margin: auto;
  }

  .product-variants {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  .product-variant {
    width: 100%;
  }

  .product-variant.active img {
    padding: 8px;
  }

  .product-variant span {
    display: block;
    margin: 0 8px;
    overflow: hidden;
  }

  .product-variant.active span {
    color: #fff;
  }

  @media screen and (max-width: 750px) {
    .product-detail_info-div img {
      width: 40px;
      height: 40px;
    }

    .product-details h2 {
      font-size: 22px;
    }

    .product-details h3 {
      font-size: 20px;
    }

    .product-details-prices h4 {
      font-size: 19px;
      margin-bottom: 4px;
    }
  }

  .product-detail_info-div strong {
    font-weight: 400;
    color: #fff;
  }

  .product-detail_info-div p {
    font-family: "Sen";
    font-weight: 400;
    font-size: 14px;
    color: #c9c9cc;
  }

  .product-detail p {
    font-family: "Albert Sans";
    font-weight: 400;
    font-size: 16px;
    color: #c9c9cc;
  }

  .product-details .add-to-cart-button {
    background-color: #ff0004;
    color: white;
  }

  .product-details .add-to-cart-button span {
    color: white;
  }

  .product-details accordion-custom .details__header {
    padding: 12px 0;
    font-family: "Sen";
    font-weight: 400;
    font-size: 16px;
    color #fff;
  }

  .product-details .accordion p px {} {
    margin: 0;
  }

  .product-details  .accordion-custom .details-content p {
    font-family: "Albert Sans";
    font-weight: 600;
    font-size: 12x; 
    color: #c9c9cc;
  }

  .product-details p em {

  }

  .product-details-contact {
    margin-top: 20px;
  }

  span.jdgm-prev-badge__text {
    font-size: 16px;
    margin-left: 10px;
  }
{% endstyle %}

{% stylesheet %}
  /* Clear padding on mobile, if not full-width */
  @media screen and (max-width: 749px) {
    .product-information.section--page-width .product-details > .group-block {
      padding-inline: 0;
    }
  }

  .view-product-title {
    display: none;
  }

  /* Container styles */
  .product-details {
    display: flex;
    align-self: start;
    justify-content: center;
  }

  @media screen and (min-width: 750px) {
    .product-details > .group-block {
      height: min-content;
    }

    .full-height--desktop {
      height: 100%;
      max-height: calc(100vh - var(--header-group-height, 0));
      min-height: fit-content;
    }

    .full-height--desktop .group-block {
      align-self: var(--details-position, 'flex-start');
    }
  }
{% endstylesheet %}

