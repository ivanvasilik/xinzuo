{% style %}
    .section-{{ section.id }} {
          display: flex;
          max-width: 800px;
          align-items: center;
          position: fixed;
          top:50%;
          left:50%;
          z-index: 99;
          align-self: stretch;
          border: 1px solid var(--Line, rgba(255, 255, 255, 0.05));
          background: #151515;
          transform: translate(-50%, -50%);
          box-shadow: 0 8px 24px 0 rgba(0, 0, 0, 0.10);
    }
    .section-{{ section.id }} img {
        width: 350px;
        height: 440px;
    }
    .section-{{ section.id }} .order_content {
        display: flex;
        padding: 48px 32px;
        flex-direction: column;
        align-items: center;
        flex: 1 0 0;
    } 

    .section-{{ section.id }} h2 {
        color: var(--Default, #F9F9F7);
        text-align: center;
        font-family: var(--Primary-Font-Family-Heading, Sen);
        font-size: var(--Primary-Font-Size-H3, 36px);
        font-style: normal;
        font-weight: var(--Primary-Font-Weight-Semibold, 600);
        line-height: 135%; /* 48.6px */
        letter-spacing: -0.18px;
        margin-bottom:0;
    }
    .section-{{ section.id }} p {
        color: var(--Text, #86868B);
        text-align: center;
        font-family: var(--Primary-Font-Family-Body, "Albert Sans");
        font-size: var(--Primary-Font-Size-Text-Default, 16px);
        font-style: normal;
        font-weight: var(--Primary-Font-Weight-Regular, 400);
        line-height: 150%;
        margin-bottom:48px;
    }

    .section-{{  section.id }} input {
        display: flex;
        padding: 10px 16px;
        justify-content: center;
        align-items: center;
        gap: 10px;
        align-self: stretch;
        border-radius: 4px;
        border: 1px solid var(--Stroke, rgba(255, 255, 255, 0.10));
        background: rgba(255, 255, 255, 0.03);
        color: var(--Text, #86868B);
        font-family: var(--Primary-Font-Family-Body, "Albert Sans");
        font-size: var(--Primary-Font-Size-Label, 14px);
        font-style: normal;
        font-weight: var(--Primary-Font-Weight-Regular, 400);
        line-height: 20px; /* 142.857% */
    }

    .section-{{ section.id }} button {
        border-radius: 4px;
        border: 1px solid rgba(255, 255, 255, 0.10);
        background: var(--Primary-Shade, #CA322B);
        color: #FFF;
        text-align: center;
        font-family: var(--Primary-Font-Family-Heading, Sen);
        font-size: var(--Primary-Font-Size-Button-Default, 14px);
        font-style: normal;
        font-weight: var(--Primary-Font-Weight-Semibold, 600);
        line-height: 20px; /* 142.857% */
        letter-spacing: 0.28px;
        text-transform: uppercase;
    }
 
{% endstyle %}

<div class="section-{{ section.id }}">
  <div class="order_image">
    {% if section.settings.first_order_image != blank %}
      <img src="{{ section.settings.first_order_image | img_url: 'master' }}" width="100%" height="100%" alt="Knife">
    {% endif %}
  </div>
  <div class="order_content">
    <h2>{{ section.settings.first_order_title }}</h2>
    {{ section.settings.first_order_content }}
    <input placeholder="Enter email, receive code instantly">
    <button>{{ section.settings.first_order_button }}</button>
  </div>
</div>

{% schema %}
{
  "name": "first_order",
  "settings": [
    {
      "type": "image_picker",
      "id": "first_order_image",
      "label": "Enjoy Order Image"
    },
    {
      "type": "text",
      "id": "first_order_title",
      "label": "First Order Title"
    },
    {
      "type": "richtext",
      "id": "first_order_content",
      "label": "First Order Content"
    },
    {
      "type": "text",
      "id": "first_order_input",
      "label": "First Order Input"
    },
    {
      "type": "text",
      "id": "first_order_button",
      "label": "First Order Button"
    }
  ],
  "presets": [
    {
      "name": "first_order"
    }
  ]
}
{% endschema %}
