{% style %}
    .section-{{ section.id }} {
        background-color: #111;
    }

    .section-{{ section.id }} .home-products {
        /* max-width: 1440px; */
        /* margin: 0 auto; */
        background-color: black;
        position: relative;
    }
    
    .section-{{ section.id }} .home-products-gradient {
        background: linear-gradient(0deg, #0C0C0C 0%, #292A33 99.48%);
        width: 100%;
        height: 80%;
        position: absolute;
        min-height: 600px;
        max-height: 600px;
    }

    .section-{{ section.id }} .home-products-div {
        display: flex;
        flex-direction: column;
        gap: 60px;
        position: relative;
        padding: 60px 80px;
    }

    .section-{{ section.id }} .home-products-div > h2 {
        font-family: "Sen";
        font-size: 64px;
        font-weight: 600;
        color: #fff;
        line-height: 125%;
        margin: 0;
    }

    .section-{{ section.id }} .home-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 60px;
    }

    .section-{{ section.id }} .product-item {
        width: calc(50% - 30px);
    }

    .section-{{ section.id }} .product-item h2 {
        font-size: 36px;
        font-family: "Sen";
        font-weight: 600;
        color: white;
        line-height: 135%;
        margin: 0;
        padding: 15px 12px 0;
    }

    .section-{{ section.id }} .jdgm-prev-badge__text {
        font-family: "Albert Sans";
        font-weight: 400;
        font-size: 18px;
        color: #c9c9cc;
    }

    .section-{{ section.id }} .collection-price {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 12px;
    }

    .section-{{ section.id }} .collection-price span.prices {
        font-family: "Sen";
        font-weight: 600;
        font-size: 36px;
        color: #fff
    }
        
    .section-{{ section.id }} .collection-price span.compare-price {
        font-size: 22px;
        text-decoration: line-through;
        color: #828282;
    }

    .section-{{ section.id }} .collection-link {
        display: flex;
        align-items: center;
        gap: 10px;
        font-family: "Sen";
        font-size: 16px;
        font-weight: 600;
        color: #fff;
        line-height: 250%;
        border-bottom: 1px solid #c9c9cc;
    }

    .section-{{ section.id }} #load-more {
        width: fit-content;
        padding: 10px 20px;
        font-family: 'Sen';
        font-weight: 600;
        font-size: 24px;
        color: white;
        background-color: #ff0004;
        border: none;
        border-radius: 4px;
        margin: auto;
    }

    .section-{{ section.id }} #load-more:disabled {
        background-color: #ff0004bb;
        color: #ffffffbb;
    }

    .section-{{ section.id }} #view-all-products {
        display: none;
        width: fit-content;
        margin: 20px auto 0;
        padding: 12px 24px;
        font-family: 'Sen';
        font-weight: 600;
        font-size: 18px;
        color: #fff;
        background-color: rgba(255, 255, 255, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 4px;
        text-decoration: none;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
    }

    .section-{{ section.id }} #view-all-products svg {
        width: 20px;
        height: 20px;
        color: #fff;
    }

    .section-{{ section.id }} #view-all-products:hover {
        background-color: rgba(255, 255, 255, 0.12);
        border-color: rgba(255, 255, 255, 0.3);
        transform: translateY(-2px);
    }

    .section-{{ section.id }} #view-all-products:active {
        transform: translateY(0);
    }

    .section-{{ section.id }} .product-img {
        position: relative;
        display: flex;
    }

    .section-{{ section.id }} .product-img .sold {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-color: #00000066;
        color: white;
        font-family: "Sen";
        font-weight: 400;
        font-size: 24px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .section-{{ section.id }} .product-img .price-off {
        position: absolute;
        background-color: #ff0004;
        padding: 5px 15px;
        border-radius: 20px;
        top: 10px;
        left: 15px;
    }

    @media screen and (max-width: 1025px) {
        .section-{{ section.id }} .home-products-div {
            padding: 40px 40px 60px;
            gap: 30px;
        }

        .section-{{ section.id }} .home-products-div > h2 {
            font-size: 36px;
        }

        .section-{{ section.id }} .home-grid {
            gap: 30px;
        }

        .section-{{ section.id }} .product-item {
            width: calc(50% - 15px);
        }

        .section-{{ section.id }} .product-item h2 {
            font-size: 15px;
            padding: 5px 12px 0;
        }

        .section-{{ section.id }} .jdgm-widget {
            padding: 5px 12px !important;
        }

        .section-{{ section.id }} .collection-price span.prices {
            font-size: 22px;
        }

        .section-{{ section.id }} .collection-price span.compare-price {
            font-size: 19px;
        }

        .section-{{ section.id }} .jdgm-prev-badge__text {
            font-size: 16px;
        }

        .section-{{ section.id }} .collection-link {
            font-size: 14px;
        }

        .section-{{ section.id }} #load-more {
            font-size: 16px;
        }

        .section-{{ section.id }} #view-all-products {
            font-size: 16px;
            padding: 10px 20px;
        }
    }
    
    @media screen and (max-width: 750px) {
        .section-{{ section.id }} .home-products-div {
            padding: 30px 18px 60px;
            gap: 20px;
        }

        .section-{{ section.id }} .home-grid {
            column-gap: 10px;
            row-gap: 20px;
        }

        .section-{{ section.id }} .product-item {
            width: 100%;
        }

        .section-{{ section.id }} .product-item h2 {
            font-size: 24px;
        }

        .section-{{ section.id }} .collection-price {
            display: block;
        }

        .section-{{ section.id }} .collection-link {
            width: fit-content;
        }

        .section-{{ section.id }} #view-all-products {
            font-size: 14px;
            padding: 10px 18px;
        }
    }
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section-{{ section.id }} color-{{ section.settings.color_scheme }}">
    <div class="home-products">
        <div class="home-products-gradient"></div>
        <div class="home-products-div">
            <h2>{{ section.settings.heading }}</h2>
            <div class="home-grid" id="home-products">
                {% assign counter = 0 %}
                {% assign products_to_show = section.settings.products | default: collections.all.products %}
                {% for product in products_to_show %}
                    {% assign counter = counter | plus: 1 %}
                    <div class="product-item" {% if counter > 4 %}style="display:none"{% endif %}>
                        <a class="product-img" href="{{ product.url }}">
                            {% if product.featured_image != blank %}
                                <img src="{{ product.featured_image | img_url: 'master' }}" width="100%" height="100%" alt="product-{{ product.id }}" loading="lazy">
                            {% endif %}
                            {% if product.available == false %}
                                <span class="sold">Sold Out</span>
                            {% endif %}
                            {% if product.compare_at_price and product.compare_at_price > product.price %}
                                {% assign discount = product.compare_at_price | minus: product.price %}
                                {% assign percent = discount | times: 100 | divided_by: product.compare_at_price %}
                                <span class="price-off">{{ percent }}% OFF</span>
                            {% endif %}
                        </a>
                        <h2>{{ product.title }}</h2>

                        <!-- Start of Judge.me Rating Widget -->
                        <div class="jdgm-widget jdgm-preview-badge" 
                        data-id="{{ collection.id }}" 
                        data-auto-install="false"
                        style="padding: 12px;"
                        >
                        {{ product.metafields.judgeme.badge }}
                        </div>
                        <!-- End of Judge.me Rating Widget -->

                        <div class="collection-price">
                            <span class="prices">
                                <span class="sale-price">{{ product.price | money }}</span>
                                <span class="compare-price">{{ product.compare_at_price | money }}</span>
                            </span>
                            <a class="collection-link" href="{{ product.url }}">
                                <span>SHOP NOW</span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                                    <g clip-path="url(#clip0_6018_26691)">
                                        <path d="M5 15L15 5" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                        <path d="M6.875 5H15V13.125" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                    </g>
                                    <defs>
                                        <clipPath id="clip0_6018_26691">
                                        <rect width="20" height="20" fill="white"/>
                                        </clipPath>
                                    </defs>
                                </svg>
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a id="load-more" href="/collections/all-products" data-page="1">SHOP ALL</a>
            <a href="/collections/all-products" id="view-all-products" class="view-all-link">
                <span>View All Products</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                    <g clip-path="url(#clip0_shop_all)">
                        <path d="M5 15L15 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M6.875 5H15V13.125" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                    </g>
                    <defs>
                        <clipPath id="clip0_shop_all">
                            <rect width="20" height="20" fill="white"/>
                        </clipPath>
                    </defs>
                </svg>
            </a>
        </div>
    </div>
</div>

<script>
    {% comment %} document.addEventListener('DOMContentLoaded', () => {
        const btn = document.querySelector('#load-more');
        const viewAllBtn = document.querySelector('#view-all-products');
        const products = document.querySelectorAll('#home-products .product-item');
        let visible = 4;

        btn.addEventListener('click', () => {
            btn.disabled = true;
            btn.textContent = 'Loading...';

            setTimeout(() => {
            for (let i = visible; i < visible + 4; i++) {
                if (products[i]) products[i].style.display = 'block';
            }

            visible += 4;

            btn.disabled = false;
            btn.textContent = 'Load more';

            if (visible >= products.length) {
                btn.remove();
                viewAllBtn.style.display = 'flex';
            }
            }, 1000);
        });
    }); {% endcomment %}
</script>

{% schema %}
{
    "name": "Home Products",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "product_list",
            "id": "products",
            "label": "Products to Display",
            "limit": 24,
            "info": "Select products and drag to reorder. Leave empty to show all products."
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        }
    ],
    "presets": [
        {
            "name": "Home Products"
        }
    ]
}
{% endschema %}