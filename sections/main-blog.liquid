
{%- comment -%} SEO: Blog Listing Page Meta Tags {%- endcomment -%}
{%- if blog.description != blank -%}
  <meta name="description" content="{{ blog.description | strip_html | truncate: 160 }}">
{%- endif -%}

{%- comment -%} Open Graph Tags {%- endcomment -%}
<meta property="og:type" content="website">
<meta property="og:title" content="{{ blog.title | escape }} - {{ shop.name }}">
{%- if blog.description != blank -%}
  <meta property="og:description" content="{{ blog.description | strip_html | truncate: 160 }}">
{%- endif -%}
<meta property="og:url" content="{{ blog.url | prepend: shop.url }}">
{%- if blog.articles.first.image -%}
  <meta property="og:image" content="{{ blog.articles.first.image | image_url: width: 1200 }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{%- endif -%}

{%- comment -%} Twitter Card Tags {%- endcomment -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ blog.title | escape }} - {{ shop.name }}">
{%- if blog.description != blank -%}
  <meta name="twitter:description" content="{{ blog.description | strip_html | truncate: 160 }}">
{%- endif -%}
{%- if blog.articles.first.image -%}
  <meta name="twitter:image" content="{{ blog.articles.first.image | image_url: width: 1200 }}">
{%- endif -%}

<script
  src="{{ 'blog-posts-list.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<blog-posts-list section-id="{{ section.id }}">
  <div class="section-background color-{{ section.settings.color_scheme }}"></div>
  <div
    class="
      section
      color-{{ section.settings.color_scheme }}
      blog-posts
      spacing-style
      size-style
    "
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    {%- comment -%} Blog Header {%- endcomment -%}
    <div class="blog-header">
      <h1 class="blog-title">{{ blog.title }}</h1>
      {%- if blog.description != blank -%}
        <p class="blog-description">{{ blog.description }}</p>
      {%- endif -%}
    </div>

    {%- paginate blog.articles by 12 -%}
      <span ref="viewMorePrevious"></span>
      <div
        ref="grid"
        class="blog-posts-container"
        data-last-page="{{ paginate.pages }}"
      >
        {% for article in blog.articles %}
          <article
            class="blog-post-card"
            ref="cards[]"
            data-page="{{ paginate.current_page }}"
          >
            <a href="{{ article.url }}" class="blog-card-link">
              {%- if article.image -%}
                <div class="blog-card-image">
                  <img
                    src="{{ article.image | image_url: width: 800 }}"
                    alt="{{ article.image.alt | escape }}"
                    loading="lazy"
                    width="800"
                    height="500"
                  >
                </div>
              {%- endif -%}
              
              <div class="blog-card-content">
                <div class="blog-card-meta">
                  <time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
                    {{ article.published_at | date: '%B %d, %Y' }}
                  </time>
                  {%- if article.content != blank -%}
                    {%- assign word_count = article.content | strip_html | split: ' ' | size -%}
                    {%- assign reading_time = word_count | divided_by: 200 | at_least: 1 -%}
                    <span class="reading-time">{{ reading_time }} min read</span>
                  {%- endif -%}
                </div>
                
                <h2 class="blog-card-title">{{ article.title }}</h2>
                
                {%- if article.excerpt != blank -%}
                  <p class="blog-card-excerpt">{{ article.excerpt | strip_html | truncate: 120 }}</p>
                {%- endif -%}
                
                <span class="blog-card-cta">Read Article →</span>
              </div>
            </a>
          </article>
        {% endfor %}
      </div>
      <span ref="viewMoreNext"></span>
    {%- endpaginate -%}
  </div>
</blog-posts-list>

{% stylesheet %}
  /* ==========================================================================
     BLOG LISTING PAGE - MODERN CLEAN DESIGN
     ========================================================================== */
  
  .blog-posts {
    --page-content-width: var(--normal-page-width);
    --page-width: calc(var(--page-content-width) + (var(--page-margin) * 2));
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Blog Header
     ========================================================================== */
  .blog-header {
    text-align: center;
    margin-bottom: 80px;
    padding: 0 20px;
  }

  @media screen and (max-width: 749px) {
    .blog-header {
      margin-bottom: 48px;
    }
  }

  .blog-title {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin: 0 0 16px 0;
    color: rgb(var(--color-foreground-rgb));
  }

  @media screen and (max-width: 749px) {
    .blog-title {
      font-size: 2.5rem;
    }
  }

  .blog-description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: rgb(var(--color-foreground-rgb) / 0.7);
    max-width: 600px;
    margin: 0 auto;
  }

  @media screen and (max-width: 749px) {
    .blog-description {
      font-size: 1.125rem;
    }
  }

  /* Blog Grid
     ========================================================================== */
  .blog-posts-container {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  @media screen and (max-width: 990px) {
    .blog-posts-container {
      grid-template-columns: repeat(2, 1fr);
      gap: 32px;
    }
  }

  @media screen and (max-width: 749px) {
    .blog-posts-container {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }

  /* Blog Card
     ========================================================================== */
  .blog-post-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid rgb(var(--color-foreground-rgb) / 0.08);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .blog-post-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgb(var(--color-foreground-rgb) / 0.12);
    border-color: rgb(var(--color-foreground-rgb) / 0.12);
  }

  .blog-card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Card Image
     ========================================================================== */
  .blog-card-image {
    position: relative;
    width: 100%;
    padding-top: 62.5%; /* 16:10 aspect ratio */
    overflow: hidden;
    background: rgb(var(--color-foreground-rgb) / 0.04);
  }

  .blog-card-image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-post-card:hover .blog-card-image img {
    transform: scale(1.05);
  }

  /* Card Content
     ========================================================================== */
  .blog-card-content {
    padding: 28px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  @media screen and (max-width: 749px) {
    .blog-card-content {
      padding: 24px;
    }
  }

  .blog-card-meta {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 0.875rem;
    color: rgb(var(--color-foreground-rgb) / 0.6);
    margin-bottom: 16px;
  }

  .blog-card-meta time {
    font-weight: 500;
  }

  .reading-time {
    position: relative;
    padding-left: 12px;
  }

  .reading-time::before {
    content: '•';
    position: absolute;
    left: 0;
    color: rgb(var(--color-foreground-rgb) / 0.3);
  }

  .blog-card-title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0 0 12px 0;
    color: rgb(var(--color-foreground-rgb));
    transition: color 0.2s ease;
  }

  @media screen and (max-width: 749px) {
    .blog-card-title {
      font-size: 1.375rem;
    }
  }

  .blog-post-card:hover .blog-card-title {
    color: var(--color-link);
  }

  .blog-card-excerpt {
    font-size: 1rem;
    line-height: 1.6;
    color: rgb(var(--color-foreground-rgb) / 0.7);
    margin: 0 0 20px 0;
    flex-grow: 1;
  }

  .blog-card-cta {
    display: inline-flex;
    align-items: center;
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-link);
    transition: gap 0.2s ease;
  }

  .blog-post-card:hover .blog-card-cta {
    gap: 8px;
  }

  /* Cards without images
     ========================================================================== */
  .blog-post-card:not(:has(.blog-card-image)) .blog-card-content {
    padding: 40px 32px;
  }

  @media screen and (max-width: 749px) {
    .blog-post-card:not(:has(.blog-card-image)) .blog-card-content {
      padding: 32px 24px;
    }
  }
{% endstylesheet %}

