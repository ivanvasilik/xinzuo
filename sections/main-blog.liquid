

<script
  src="{{ 'blog-posts-list.js' | asset_url }}"
  type="module"
  fetchpriority="low"
></script>

<blog-posts-list section-id="{{ section.id }}">
  <div class="section-background color-{{ section.settings.color_scheme }}"></div>
  <div
    class="
      section
      color-{{ section.settings.color_scheme }}
      blog-posts
      spacing-style
      size-style
    "
    style="{% render 'spacing-style', settings: section.settings %}"
  >
    {% content_for 'blocks' %}

    {%- paginate blog.articles by 12 -%}
      <span ref="viewMorePrevious"></span>
      <div
        ref="grid"
        class="blog-posts-container"
        data-last-page="{{ paginate.pages }}"
      >
        {% for article in blog.articles %}
          <div
            class="blog-post-item"
            ref="cards[]"
            data-page="{{ paginate.current_page }}"
          >
            {% content_for 'block', id: 'static-blog-post-card', type: '_blog-post-card', article: article %}
          </div>
        {% endfor %}
      </div>
      <span ref="viewMoreNext"></span>
    {%- endpaginate -%}
  </div>
</blog-posts-list>

{% stylesheet %}
  /**
   * Blog posts page layout
   */
  .blog-posts {
    --page-content-width: var(--wide-page-width);
    --page-width: calc(var(--page-content-width) + (var(--page-margin) * 2));
    --columns-gap: 32px;
    --rows-gap: 48px;
  }

  @media screen and (max-width: 749px) {
    .blog-posts {
      --columns-gap: 20px;
      --rows-gap: 32px;
    }
  }

  .blog-posts-container {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1rem;
    width: 100%;
    column-gap: var(--columns-gap);
    row-gap: var(--rows-gap);
  }

  /**
   * Blog post card styling - modern, clean design
   */
  .blog-post-item {
    --blog-post-card-scale: 0.6;
    
    grid-column: span 2;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgb(var(--color-foreground-rgb) / 0.08);

    @media screen and (max-width: 749px) {
      --blog-post-card-scale: 0.5;
      grid-column: span 6;
      border-radius: 8px;
    }
  }

  .blog-post-item:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgb(var(--color-foreground-rgb) / 0.1);
  }

  /**
   * The second row of blog posts has two columns
   */
  .blog-post-item:nth-child(2),
  .blog-post-item:nth-child(3) {
    --blog-post-card-scale: 0.8;
    grid-column: span 3;

    @media screen and (max-width: 749px) {
      --blog-post-card-scale: 0.5;
      grid-column: span 6;
    }
  }

  /**
   * The first row of blog posts - featured post (full width)
   */
  .blog-post-item:first-child {
    --blog-post-card-scale: 1;
    grid-column: span 6;
  }

  /**
   * Card content padding
   */
  .blog-post-item:has(.blog-post-card__image-container) {
    padding: 0;
  }

  .blog-post-item:not(:has(.blog-post-card__image-container)) {
    padding: 2rem;
  }

  @media screen and (max-width: 749px) {
    .blog-post-item:not(:has(.blog-post-card__image-container)) {
      padding: 1.5rem;
    }
  }
{% endstylesheet %}

