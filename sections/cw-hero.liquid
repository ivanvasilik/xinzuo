{% style %}
    .section-{{ section.id }} {
        background-color: #262933;
    }

    .section-{{ section.id }} .hero-banner {
        /* Simplified: solid background matches nav bar (no complex gradients) */
        /* This makes it easy to upload any hero image - they'll all look consistent */
        background: #262933;
        display: flex;
        justify-content: flex-end;
        /* Best practice for ecommerce CRO: Shorter hero = users see products faster */
        height: 550px;
        min-height: 450px;
        max-height: 600px;
        max-width: 1440px;
        margin: auto;
        position: relative;
    }

    .section-{{ section.id }} .hero-banner-content {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 500px;
        position: absolute;
        top: 0;
        right: 54%;
        height: 100%;
        z-index: 1;
    }

    .section-{{ section.id }} .hero-banner-content span {
        width: 450px;
    }
    
    .section-{{ section.id }} .hero-banner-content h2 {
        color: #fff;
        font-family: "Sen";
        font-size: 80px;
        font-weight: 600;
        line-height: 120%;
        margin: 0;
    }

    .section-{{ section.id }} .hero-banner-content span {
        font-size: 18px;
        font-weight: 400;
        color: #c9c9cc;
    }

    .section-{{ section.id }} .hero-banner-content p {
        padding: 10px 0;
    }

    .section-{{ section.id }} .desktop-hero {
        position: absolute;
        bottom: 0;
        right: 0;
        width: 58%;
        height: 100%;
        /* Cover maintains original layout but prevents side cropping with max-height constraint */
        object-fit: cover;
        object-position: center center;
    }

    .section-{{ section.id }} .hero-banner-content a {
        font-family: "Sen";
        font-weight: 500;
        font-size: 16px;
        letter-spacing: 2px;
        line-height: 250%;
        display: flex;
        align-items: center;
        padding: 12px 0;
        gap: 6px;
        color: #fff;
        width: max-content;
        color: #ff0004;
    }

    .section-{{ section.id }} .hero-banner-img img {
        height: 100%;
    }

    .section-{{ section.id }} .mobile-hero {
        width: 100vw;
        object-fit: cover;
        display: none;
    }

    @media screen and (max-width: 1150px) {
        .section-{{ section.id }} .hero-banner-content {
            width: 400px;
            right: unset;
            left: 50px;
        }

        .section-{{ section.id }} .desktop-hero {
            width: 64%;
        }

        .section-{{ section.id }} .hero-banner-content h2:nth-child(odd) {
            font-size: 40px;
        }

        .section-{{ section.id }} .hero-banner-content h2:nth-child(even) {
            font-size: 40px;
        }

        .section-{{ section.id }} .hero-banner-content span {
            font-size: 16px;
            width: 250px;
        }

        .section-{{ section.id }} .hero-banner-content a {
            font-size: 13px;
        }
    }

    @media screen and (max-width: 1000px) {
        .section-{{ section.id }} .hero-banner-content {
            justify-content: flex-end;
            width: calc(100% - 100px);
        }

        .section-{{ section.id }} .hero-banner-content a {
            margin-bottom: 60px;
        }

        .section-{{ section.id }} .desktop-hero {
            width: 80%;
        }
    }

    @media screen and (max-width: 820px) {
        .section-{{ section.id }} .desktop-hero {
            width: 86%;
        }
    }

    @media screen and (max-width: 760px) {
        .section-{{ section.id }} .desktop-hero {
            width: 100%;
        }

        .section-{{ section.id }} .hero-banner-content {
            left: 25px;
        }

        .section-{{ section.id }} .hero-banner {
            height: 500px;
            min-height: 450px;
        }
    }

    @media screen and (max-width: 480px) {
        .section-{{ section.id }} .desktop-hero {
            display: none;
        }

        .section-{{ section.id }} .mobile-hero {
            display: block;
            object-fit: contain;
            object-position: center center;
        }

        .section-{{ section.id }} .hero-banner {
            /* Mobile CRO best practice: Shorter hero = faster content access */
            height: 450px;
            min-height: 400px;
            max-height: 500px;
        }
    }
{% endstyle %}

<section class="section-{{ section.id }}">
    <div>
        <div class="hero-banner">
            <div class="hero-banner-content">
                <span class="desktop">{{ section.settings.heading_desktop }}</span>
                <span class="mobile">{{ section.settings.heading_mobile }}</span>
                <span class="desktop">{{ section.settings.content_desktop }}</span>
                <span class="mobile">{{ section.settings.content_mobile }}</span>
                <a href="#meet">
                    {{ section.settings.link_text }}
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                        <g clip-path="url(#clip0_6018_26608)">
                            <path d="M10 3.125V16.875" stroke="#FF0004" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            <path d="M4.375 11.25L10 16.875L15.625 11.25" stroke="#FF0004" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </g>
                        <defs>
                            <clipPath id="clip0_6018_26608">
                                <rect width="20" height="20" fill="white"/>
                            </clipPath>
                        </defs>
                    </svg>
                </a>
            </div>
            <div class="hero-banner-img">
                <img
                    srcset="
                    {{ section.settings.desktop_img | image_url: width: 800 }} 800w,
                    {{ section.settings.desktop_img | image_url: width: 1200 }} 1200w,
                    {{ section.settings.desktop_img | image_url: width: 1600 }} 1600w,
                    {{ section.settings.desktop_img | image_url: width: 2000 }} 2000w"
                    sizes="100vw"
                    src="{{ section.settings.desktop_img | image_url: width: 1600 }}"
                    alt="Desktop hero"
                    width="100%"
                    height="auto"
                    fetchpriority="high"
                    decoding="async"
                    class="desktop-hero"
                >
                <img
                    srcset="
                    {{ section.settings.mobile_img | image_url: width: 400 }} 400w,
                    {{ section.settings.mobile_img | image_url: width: 800 }} 800w,
                    {{ section.settings.mobile_img | image_url: width: 1200 }} 1200w"
                    sizes="100vw"
                    src="{{ section.settings.mobile_img | image_url: width: 800 }}"
                    alt="Mobile hero"
                    width="100%"
                    height="auto"
                    loading="eager"
                    fetchpriority="high"
                    decoding="async"
                    class="mobile-hero"
                >
                {% comment %} <img src="{{ section.settings.desktop_img | img_url: 'master' }}" width="100%" height="100%" alt="Desktop hero" class="desktop-hero">
                <img src="{{ section.settings.mobile_img | img_url: 'master' }}" width="100%" height="100%" alt="Mobile hero" class="mobile-hero"> {% endcomment %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "CW Hero",
    "settings": [
        {
            "type": "richtext",
            "id": "heading_desktop",
            "label": "Desktop Header"
        },
        {
            "type": "richtext",
            "id": "content_desktop",
            "label": "Desktop Content"
        },
        {
            "type": "richtext",
            "id": "heading_mobile",
            "label": "Mobile Header"
        },
        {
            "type": "richtext",
            "id": "content_mobile",
            "label": "Mobile Content"
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
        },
        {
            "type": "image_picker",
            "id": "desktop_img",
            "label": "Desktop Image"
        },
        {
            "type": "image_picker",
            "id": "mobile_img",
            "label": "Mobile Image"
        }
    ],
    "presets": [
        {
            "name": "CW Hero"
        }
    ]
}
{% endschema %}