{% style %}
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section class="section-{{ section.id }} section section--page-width color-{{ section.settings.color_scheme }}">
    <h2>{{ section.settings.heading }}</h2>
    <div class="product-info3">
        <div class="product-info3-left">
            <img src="{{ section.settings.img | img_url: 'master' }}" width="100%" height="100%" alt="product-info3">
            <p>{{ section.settings.img_text }}</p>
        </div>
        <div class="product-info3-right">
            <div class="product-info3-div">
                <p>{{ section.settings.info_header1 }}</p>
                <h2>{{ section.settings.info_content1 }}</h2>
                <span>{{ section.settings.info_footer1 }}</span>
            </div>
            <div class="product-info3-div">
                <p>{{ section.settings.info_header2 }}</p>
                <h2>{{ section.settings.info_content2 }}</h2>
                <span>{{ section.settings.info_footer2 }}</span>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Product Info3",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "img_text",
            "label": "Image text"
        },
        {
            "type": "text",
            "id": "info_header1",
            "label": "Info Header1"
        },
        {
            "type": "text",
            "id": "info_content1",
            "label": "Info Content1"
        },
        {
            "type": "text",
            "id": "info_footer1",
            "label": "Info Footer1"
        },
        {
            "type": "text",
            "id": "info_header2",
            "label": "Info Header2"
        },
        {
            "type": "text",
            "id": "info_content2",
            "label": "Info Content2"
        },
        {
            "type": "text",
            "id": "info_footer2",
            "label": "Info Footer2"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        }
    ],
    "presets": [
        {
            "name": "Product Info3"
        }
    ]
}
{% endschema %}