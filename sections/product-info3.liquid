{% style %}
    .section-{{ section.id }} .product-info3 {
        display: flex;
        flex-direction: column;
        gap: 64px;
        padding: 80px 0;
    }

    .section-{{ section.id }} .product-info3 > h2 {
        width: 100%;
        max-width: 1080px;
        margin: auto;
        padding: 0 32px;
        font-family: "Sen";
        font-weight: 600;
        font-size: 64px;
        color: #c9c9cc;
    }

    .section-{{ section.id }} .product-info3 > h2:after {
        content: ".";
        color: #ff0004;
    }

    .section-{{ section.id }} .product-info3 > div {
        display: flex;
        gap: 24px;
    }

    .section-{{ section.id }} .product-info3-left {
        width: 50%;
        border-radius: 16px;
        overflow: hidden;
        position: relative;
    }

    .section-{{ section.id }} .product-info3-left img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .section-{{ section.id }} .product-info3-left p {
        position: absolute;
        width: 100%;
        padding: 24px;
        text-align: center;
        bottom: 0;
        left: 0;
        font-family: "Sen";
        font-weight: 600;
        font-size: 22px;
        color: #fff;
    }

    .section-{{ section.id }} .product-info3-right {
        display: flex;
        flex-direction: column;
        gap: 20px;
        width: 50%;
    }

    .section-{{ section.id }} .product-info3-div {
        width: 100%;
        height: 50%;
        border-radius: 16px;
        padding: 32px 24px;
        border: 1px solid rgba(255, 255, 255, 0.10);
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background: linear-gradient(145deg, rgba(255, 255, 255, 0.05) 16.58%, rgba(255, 255, 255, 0.07) 83.42%);
    }

    .section-{{ section.id }} .product-info3-div p {
        font-family: "Sen";
        font-weight: 600;
        font-size: 16px;
        color: #c9c9cc;
        margin: 0;
    }

    .section-{{ section.id }} .product-info3-div h2 {
        font-family: "Sen";
        font-weight: 600;
        font-size: 48px;
        color: #c1c4c7;
        margin: 10px 0 20px;
        text-align: center;
    }

    .section-{{ section.id }} .product-info3-div span {
        font-family: "Albert Sans";
        font-weight: 400;
        font-size: 14px;
        color: #c9c9cc;
        line-height: 20px;
        text-align: center;
        max-width: 400px;
    }

    {% if section.settings.width == "full" %}
        .section-{{ section.id }} {
            padding-left: 0 !important;
            padding-right: 0 !important;
        }
    {% endif %}

    @media screen and (max-width: 1025px) {
        .section-{{ section.id }} .product-info3 {
            gap: 40px;
            padding: 48px 0;
        }

        .section-{{ section.id }} .product-info3 > h2 {
            font-size: 36px;
        }

        .section-{{ section.id }} .product-info3-div h2 {
            font-size: 28px;
        }
    }

    @media screen and (max-width: 750px) {
        .section-{{ section.id }} .product-info3 > div {
            flex-direction: column;
            gap: 16px;
        }

        .section-{{ section.id }} .product-info3-left {
            width: 100%;
        }

        .section-{{ section.id }} .product-info3-right {
            width: 100%;
            gap: 16px;
        }

        .section-{{ section.id }} .product-info3-left p {
            font-size: 19px;
            padding: 16px 12px;
        }
    }
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section class="section-{{ section.id }} section section--page-width color-{{ section.settings.color_scheme }}">
    <div class="product-info3">
        <h2>{{ section.settings.heading }}</h2>
        <div>
            <div class="product-info3-left">
                <img src="{{ section.settings.img | img_url: 'master' }}" width="100%" height="100%" alt="product-info3">
                <p>{{ section.settings.img_text }}</p>
            </div>
            <div class="product-info3-right">
                <div class="product-info3-div">
                    <p>{{ section.settings.info_header1 }}</p>
                    <h2>{{ section.settings.info_content1 }}</h2>
                    <span>{{ section.settings.info_footer1 }}</span>
                </div>
                <div class="product-info3-div">
                    <p>{{ section.settings.info_header2 }}</p>
                    <h2>{{ section.settings.info_content2 }}</h2>
                    <span>{{ section.settings.info_footer2 }}</span>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Product Info3",
    "settings": [
        {
            "type": "select",
            "id": "width",
            "label": "Width",
            "options": [
                {
                    "label": "Page",
                    "value": "page"
                },
                {
                    "label": "Full",
                    "value": "full"
                }
            ],
            "default": "page"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "img_text",
            "label": "Image text"
        },
        {
            "type": "text",
            "id": "info_header1",
            "label": "Info Header1"
        },
        {
            "type": "text",
            "id": "info_content1",
            "label": "Info Content1"
        },
        {
            "type": "text",
            "id": "info_footer1",
            "label": "Info Footer1"
        },
        {
            "type": "text",
            "id": "info_header2",
            "label": "Info Header2"
        },
        {
            "type": "text",
            "id": "info_content2",
            "label": "Info Content2"
        },
        {
            "type": "text",
            "id": "info_footer2",
            "label": "Info Footer2"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        }
    ],
    "presets": [
        {
            "name": "Product Info3"
        }
    ]
}
{% endschema %}