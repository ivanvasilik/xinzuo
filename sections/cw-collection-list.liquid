    "name": "Custom product List",
    "settings": [
        {
            "type": "select",
            "id": "width",
            "label": "Width",
            "options": [
                {
                    "label": "Page",
                    "value": "page"
                },
                {
                    "label": "Full",
                    "value": "full"
                }
            ],
            "default": "page"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Header"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        }
    ],
    "blocks": [
        {
            "type": "block",
            "name": "product",
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "product"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "select",
                    "id": "image_position",
                    "label": "Image Position",
                    "options": [
                        {
                            "value": "left",
                            "label": "Left"
                        },
                        {
                            "value": "right",
                            "label": "Right"
                        }
                    ],
                    "default": "left"
                },
                {
                    "type": "text",
                    "id": "first_block_header",
                    "label": "First Property Header"
                },
                {
                    "type": "text",
                    "id": "first_block_content",
                    "label": "First Property Content"
                },
                {
                    "type": "text",
                    "id": "first_block_footer",
                    "label": "First Property Footer"
                },
                {
                    "type": "text",
                    "id": "second_block_header",
                    "label": "Second Property Header"
                },
                {
                    "type": "text",
                    "id": "second_block_content",
                    "label": "Second Property Content"
                },
                {
                    "type": "text",
                    "id": "second_block_footer",
                    "label": "Second Property Footer"
                },
                {
                    "type": "text",
                    "id": "third_block_header",
                    "label": "Third Property Header"
                },
                {
                    "type": "text",
                    "id": "third_block_content",
                    "label": "Third Property Content"
                },
                {
                    "type": "text",
                    "id": "third_block_footer",
                    "label": "Third Property Footer"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Description"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom product List"
        }
    ]
}
