{% style %}
  .section-{{ section.id }} {
    padding: 80px 0;
  }

  .section-{{ section.id }} > h2 {
    font-family: "Sen";
    font-weight: 600;
    font-size: 64px;
    color: #f9f9f7;
    max-width: 1200px;
    padding: 0 32px;
    margin: auto;
    margin-bottom: 64px;
  }

  .section-{{ section.id }} > h2:after {
    content: ".";
    color: #FD3E36;
  }

  .section-{{ section.id }} .cw-collection {
    padding: 24px 0;
    display: flex;
    flex-direction: column;
    gap: 80px;
  }

  .section-{{ section.id }} .collection-image {
    display: flex;
    align-items: center;
    gap: 48px;
  }

  .section-{{ section.id }} .collection-image img {
    width: 60%;
  }

  .section-{{ section.id }} .collection-info {
    width: 40%;
    padding: 24px 32px;
    display: flex;
    flex-direction: column;
    gap: 54px;
  }

  .section-{{ section.id }} .collection-info-div {
    width: fit-content;
  }

  .section-{{ section.id }} .collection-info-div > h2 {
    font-family: "Sen";
    font-weight: 600;
    font-size: 48px;
    color: #56565b;
    padding-bottom: 24px;
    border-bottom: 2px solid rgba(255, 255, 255, 0.20);
    margin: 0;
    margin-bottom: 54px;
    width: max-content;
    line-height: 125%;
  }

  .section-{{ section.id }} .collection-info-div > h2:after {
    content: ".";
  }

  .section-{{ section.id }} .collection-info-div > div {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .section-{{ section.id }} .collection-info-block p {
    font-family: "Sen";
    font-weight: 600;
    font-size: 22px;
    color: #86868b;
    margin: 0;
  }

  .section-{{ section.id }} .collection-info-block h2 {
    font-family: "Sen";
    font-weight: 600;
    font-size: 48px;
    color: #c1c4c7;
    margin: 0;
  }

  .section-{{ section.id }} .collection-description {
    width: 100%;
    max-width: 1080px;
    padding: 0 32px;
    margin: auto;
  }

  .section-{{ section.id }} .product-info.active {
    color: #f9f9f7;
    border-bottom: 1.5px solid #f9f9f7;
  }

  .section-{{ section.id }} .collection-description-span {
    display: none;
    font-family: "Albert Sans";
    font-weight: 400;
    font-size: 18px;
    color: #86868b;
    flex-direction: column;
    gap: 32px;
    text-align: center;
    max-width: 640px;
    margin: auto;
  }

  .section-{{ section.id }} .collection-description-span a {
    color: #FD3E36;
  }

  .section-{{ section.id }} .collection-description-span.active {
    display: flex; 
  }

  .section-{{ section.id }} .collection-products ul {
    padding: 0;
    border-bottom: 1px solid #86868b;
    display: flex;
    gap: 48px;
    list-style: none;
    width: fit-content;
    margin: auto;
    margin-bottom: 56px;
    max-width: 100%;
    overflow: auto;
    position: relative;
  }

  .section-{{ section.id }} .collection-products ul li {
    padding: 16px 0;
    font-family: "Sen";
    font-weight: 600;
    font-size: 28px;
    color: #86868b;
    cursor: pointer;
    white-space: nowrap;
  }

  .section-{{ section.id }} .collection-products-div1 {
    position: absolute;
    top: 0;
    height: 100%;
    padding: 12px;
    align-items: center;
    background: #212121;
    backdrop-filter: blur(2px);
    left: 0;
    display: none;
  }

  .section-{{ section.id }} .collection-products-div2 {
    position: absolute;
    top: 0;
    height: 100%;
    padding: 12px;
    display: flex;
    align-items: center;
    background: #212121;
    backdrop-filter: blur(2px);
    right: 0;
  }

  @media screen and (max-width: 1025px) {
    .section-{{ section.id }} {
        padding: 40px 0;
    }

    .section-{{ section.id }} > h2 {
        font-size: 48px;
        margin-bottom: 36px;
    }

    .section-{{ section.id }} .collection-image {
        gap: 24px;
    }

    .section-{{ section.id }} .collection-info-div > h2 {
        font-size: 24px;
        padding-bottom: 12px;
        margin-bottom: 24px;
    }

    .section-{{ section.id }} .collection-info-block p {
        font-size: 16px;
    }

    .section-{{ section.id }} .collection-info-block h2 {
        font-size: 24px;
    }

    .section-{{ section.id }} .collection-products ul {
        gap: 24px;
        margin-bottom: 24px;
    }

    .section-{{ section.id }} .collection-products ul li {
        font-size: 20px;
    }

    .section-{{ section.id }} .collection-description-span {
        font-size: 16px;
        gap: 20px;
    }

    .section-{{ section.id }} .cw-collection {
        gap: 40px;
    }
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }} .collection-info-div > h2 {
        font-size: 36px;
    }

    .section-{{ section.id }} .collection-image {
        flex-direction: column !important;
    }

    .section-{{ section.id }} .collection-image img {
        width: 100%;
    }

    .section-{{ section.id }} .collection-info {
        width: 100%;
    }

    .section-{{ section.id }} .collection-info-block h2 {
        font-size: 28px;
    }

    .section-{{ section.id }} .collection-info-div {
        width: 100%;
    }

    .section-{{ section.id }} .collection-info-div > div {
        gap: 24px;
    }

    .section-{{ section.id }} .collection-info-div > h2 {
        font-size: 28px;
        width: 100%;
    }

    .section-{{ section.id }} .collection-products ul li {
        white-space: nowrap;
    }
  }
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section class="section-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <h2>{{ section.settings.heading }}</h2>
  <div class="cw-collections">
    {% for block in section.blocks %}
        {% assign collection = block.settings.collection %}
        <div class="cw-collection">
            <div class="collection-image" {% if block.settings.image_position == "right" %}style="flex-direction: row-reverse;"{% endif %}>
                <div class="collection-info" {% if block.settings.image_position == "right" %}style="justify-content: flex-end;"{% endif %}>
                    <div class="collection-info-div">
                        <h2>{{ collection.title }}</h2>
                        <div>
                            <div class="collection-info-block">
                                <p>{{ block.settings.first_block_header }}</p>
                                <h2>{{ block.settings.first_block_content }}</h2>
                                <p>{{ block.settings.first_block_footer }}</p>
                            </div>
                            <div class="collection-info-block">
                                <p>{{ block.settings.second_block_header }}</p>
                                <h2>{{ block.settings.second_block_content }}</h2>
                                <p>{{ block.settings.second_block_footer }}</p>
                            </div>
                            <div class="collection-info-block">
                                <p>{{ block.settings.third_block_header }}</p>
                                <h2>{{ block.settings.third_block_content }}</h2>
                                <p>{{ block.settings.third_block_footer }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {% if block.settings.image != blank %}
                    <img src="{{ block.settings.image | img_url: 'master' }}" width="100%" height="100%" alt="{{ collection.title | escape }}">
                {% else %}
                    {% if collection.featured_image != blank %}
                        <img src="{{ collection.featured_image | img_url: 'master' }}" width="100%" height="100%" alt="{{ collection.title | escape }}">
                    {% else %}
                        {% assign firstimage = collection.products.first %}
                        <img src="{{ firstimage.featured_image | img_url: 'master' }}" width="100%" height="100%" alt="{{ collection.title | escape }}">
                    {% endif %}
                {% endif %}
            </div>
            <div class="collection-description">
                {% assign num = forloop.index %}
                <div class="collection-products collection-products-{{ num }}">
                    <ul class="collection-products-ul-{{ num }}">
                        {% for product in collection.products %}
                            <li class="product-info product-info-{{ num }} product-info-{{ num }}-{{ forloop.index }} {% if forloop.index == 1 %}active{% endif %}" onclick="collectionslider_{{ num }}({{ forloop.index }})">{{ product.title }}</li>
                        {% endfor %}
                        <div class="collection-products-div1 collection-products-div1-{{ num }}" onclick="collectionUlNext_{{ num }}()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
                                <g clip-path="url(#clip0_4235_8014)">
                                    <path d="M12.5 3.91602L6.25 10.166L12.5 16.416" stroke="#86868B" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </g>
                                <defs>
                                    <clipPath id="clip0_4235_8014">
                                        <rect width="20" height="20" fill="white" transform="translate(0 0.166016)"/>
                                    </clipPath>
                                </defs>
                            </svg>
                        </div>
                        <div class="collection-products-div2 collection-products-div2-{{ num }}" onclick="collectionUlPrev_{{ num }}()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
                                <g clip-path="url(#clip0_4235_8014)">
                                    <path d="M7.5 3.91602L13.75 10.166L7.5 16.416" stroke="#86868B" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
                                </g>
                                <defs>
                                    <clipPath id="clip0_4235_8014">
                                        <rect width="20" height="20" fill="white" transform="translate(0 0.166016)"/>
                                    </clipPath>
                                </defs>
                            </svg>
                        </div>
                    </ul>
                </div>
                {% for product in collection.products %}
                    <div class="collection-description-span collection-description-span-{{ num }} collection-slider-{{ num }}-{{ forloop.index }} {% if forloop.index == 1 %}active{% endif %}">
                        {% if product.description != blank %}
                            <span>{{ product.description }}</span>
                        {% else %}
                            <span>{{ block.settings.description }}</span>
                        {% endif %}
                        <a>Learn more about {{ collection.title }} ></a>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
  </div>
</section>

<script>
    {% for block in section.blocks %}
        const collectionslider_{{ forloop.index }} = (num) => {
            const products = document.querySelectorAll('.product-info-{{ forloop.index }}');
            const productInfos = document.querySelectorAll('.collection-description-span-{{ forloop.index }}');
            const product = document.querySelector(`.product-info-{{ forloop.index }}-${num}`);
            const productInfo = document.querySelector(`.collection-slider-{{ forloop.index }}-${num}`);

            products.forEach((product) => {
                product.classList.remove('active');
            });
            productInfos.forEach((productInfo) => {
                productInfo.classList.remove('active');
            });
            product.classList.add('active');
            productInfo.classList.add('active');
        };

        const collectionUlNext_{{ forloop.index }} = () => {
            const ul_{{ forloop.index }} = document.querySelector('.collection-products-ul-{{ forloop.index }}');
            ul_{{ forloop.index }}.scrollHeight += 20;
            console.log(ul_{{ forloop.index }}.scrollHeight);
        }

        const collectionUlPrev_{{ forloop.index }} = () => {
            const ul_{{ forloop.index }} = document.querySelector('.collection-products-ul-{{ forloop.index }}');
            ul_{{ forloop.index }}.scrollHeight -= 20;
            console.log(ul_{{ forloop.index }}.scrollHeight);
        }
    {% endfor %}
</script>

{% schema %}
{
    "name": "Custom Collection List",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Header"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        }
    ],
    "blocks": [
        {
            "type": "block",
            "name": "Collection",
            "settings": [
                {
                    "type": "collection",
                    "id": "collection",
                    "label": "Collection"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "select",
                    "id": "image_position",
                    "label": "Image Position",
                    "options": [
                        {
                            "value": "left",
                            "label": "Left"
                        },
                        {
                            "value": "right",
                            "label": "Right"
                        }
                    ],
                    "default": "left"
                },
                {
                    "type": "text",
                    "id": "first_block_header",
                    "label": "First Property Header"
                },
                {
                    "type": "text",
                    "id": "first_block_content",
                    "label": "First Property Content"
                },
                {
                    "type": "text",
                    "id": "first_block_footer",
                    "label": "First Property Footer"
                },
                {
                    "type": "text",
                    "id": "second_block_header",
                    "label": "Second Property Header"
                },
                {
                    "type": "text",
                    "id": "second_block_content",
                    "label": "Second Property Content"
                },
                {
                    "type": "text",
                    "id": "second_block_footer",
                    "label": "Second Property Footer"
                },
                {
                    "type": "text",
                    "id": "third_block_header",
                    "label": "Third Property Header"
                },
                {
                    "type": "text",
                    "id": "third_block_content",
                    "label": "Third Property Content"
                },
                {
                    "type": "text",
                    "id": "third_block_footer",
                    "label": "Third Property Footer"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Description"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom Collection List"
        }
    ]
}
{% endschema %}