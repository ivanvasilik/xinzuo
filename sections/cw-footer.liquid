{% style %}
    .section-{{ section.id }} {
        padding-top: 64px;
    }
    
    .section-{{ section.id }} footer {
        background: linear-gradient(180deg, #0C0C0C 0%, #191A21 100%);
        padding: 33px 64px;
    }

    .section-{{ section.id }} .footer-head {
        padding: 32px 0;
        margin-bottom: 32px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .section-{{ section.id }} .footer-head h2 {
        font-family: "Sen";
        font-weight: 600;
        font-size: 36px;
        color: white;
        margin: 0;
        margin-bottom: 16px;
        text-align: center;
        line-height: 135%;
    }

    .section-{{ section.id }} .footer-head p {
        font-family: "Albert Sans";
        font-weight: 400;
        font-size: 16px;
        color: #86868b;
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    @media screen and (max-width: 750px) {
        .section-{{ section.id }} footer {
            padding: 32px;
        }

        .section-{{ section.id }} .footer-head {
            padding: 16px 0;
            margin-bottom: 32px;
        }

        .section-{{ section.id }} .footer-head h2 {
            font-size: 22px;
        }
    }
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<div class="section-{{ section.id }} color-{{ section.settings.color_scheme }}">
    <footer>
        <div class="footer-head">
            <h2>{{ section.settings.heading }}</h2>
            <p>{{ section.settings.content }}</p>
            {% content_for 'blocks' %}
        </div>
    </footer>
</div>

{% schema %}
{
    "name": "Custom Footer",
    "tag": "footer",
    "blocks": [
        {
            "type": "_divider"
        },
        {
            "type": "@app"
        },
        {
            "type": "button"
        },
        {
            "type": "follow-on-shop"
        },
        {
            "type": "group"
        },
        {
            "type": "icon"
        },
        {
            "type": "image"
        },
        {
            "type": "menu"
        },
        {
            "type": "payment-icons"
        },
        {
            "type": "text"
        },
        {
            "type": "logo"
        },
        {
            "type": "jumbo-text"
        },
        {
            "type": "social-links"
        },
        {
            "type": "email-signup"
        }
    ],
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "text",
            "id": "content",
            "label": "Content"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        }
    ],
    "presets": [
        {
            "name": "Custom Footer",
            "blocks": {
                "email-signup": {
                    "type": "group"
                }
            }
        }
    ]
}
{% endschema %}