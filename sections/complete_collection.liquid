{% style %}
    .section-{{ section.id }} {
        padding: 64px 0;
    }

    .section-{{ section.id }} h2 {
        width: 100%;
        max-width: 1200px;
        padding: 0 32px;
        font-family: "Sen";
        font-weight: 600;
        font-size: 64px;
        color: #f9f9f7;
        text-align: center;
        margin: 0;
        margin: auto;
        line-height: 125%;
    }

    .section-{{ section.id }} > span > h2:nth-child(even):after {
        content: ".";
        color: #FD3E36;
    }

    .section-{{ section.id }} .complete {
        padding: 64px 0;
        display: flex;
        align-items: center;
    }

    .section-{{ section.id }} .complete img {
        width: 60%;
    }

    .section-{{ section.id }} .collection-info {
        width: 40%;
        padding: 24px 32px;
    }

    .section-{{ section.id }} .collection-info-div {
        max-width: 340px;
    }

    .section-{{ section.id }} .collection-info p {
        font-family: "Sen";
        font-weight: 500;
        font-size: 18px;
        color: #c1c4c7;
    }

    .section-{{ section.id }} .collection-info h2 {
        font-family: "Sen";
        font-weight: 600;
        font-size: 48px;
        color: #f9f9f7;
        margin-bottom: 48px;
        text-align: left;
        padding: 0;
    }

    .section-{{ section.id }} .collection-info a {
        display: flex;
        gap: 12px;
        font-family: "Sen";
        font-weight: 400;
        font-size: 16px;
        color: #fd3e36;
        padding: 10px 0;
        border-bottom: 1px solid #fd3e36;
        width: fit-content;
    }

    @media screen and (max-width: 1025px) {
        .section-{{ section.id }} {
            padding: 40px 0;
        }

        .section-{{ section.id }} h2 {
            font-size: 36px;
        }

        .section-{{ section.id }} .complete {
            padding: 32px 0;
        }

        .section-{{ section.id }} .collection-info p {
            font-size: 16px;
        }

        .section-{{ section.id }} .collection-info h2 {
            font-size: 28px;
            margin-bottom: 32px;
        }
    }

    @media screen and (max-width: 750px) {
        .section-{{ section.id }} .complete {
            display: block;
            padding-bottom: 0;
        }

        .section-{{ section.id }} .complete img {
            width: 100%;
        }

        .section-{{ section.id }} .collection-info {
            width: 100%;
            padding-bottom: 0;
        }
    }
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section class="section-{{ section.id }} section section--page-width color-{{ section.settings.color_scheme }}">
    <span>{{ section.settings.heading }}</span>
    {% for block in section.blocks %}
        <div class="complete" {% if block.settings.image_position == "right" %}style="flex-direction: row-reverse"{% endif %}>
            <img src="{{ block.settings.image | img_url: 'master' }}" width="100%" height="100%" alt="complete-{{ forloop.index }}">
            <div class="collection-info" {% if block.settings.image_position == "left" %}style="display: flex;justify-content: flex-end;"{% endif %}>
                <div class="collection-info-div">
                    <p>{{ block.settings.title }}</p>
                    <h2>{{ block.settings.content }}</h2>
                    <a href="#">
                        <span>SHOP THE SET</span>
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                            <g clip-path="url(#clip0_4235_8390)">
                                <path d="M5 15L15 5" stroke="#FD3E36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                <path d="M6.875 5H15V13.125" stroke="#FD3E36" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                            </g>
                            <defs>
                                <clipPath id="clip0_4235_8390">
                                    <rect width="20" height="20" fill="white"/>
                                </clipPath>
                            </defs>
                        </svg>
                    </a>
                </div>
            </div>
        </div>
    {% endfor %}
</section>

{% schema %}
{
    "name": "Collection Complete",
    "settings": [
        {
            "type": "richtext",
            "id": "heading",
            "label": "Header"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        }
    ],
    "blocks": [
        {
            "type": "block",
            "name": "Group",
            "settings": [
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "text",
                    "id": "content",
                    "label": "Content"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "select",
                    "id": "image_position",
                    "label": "Image Position",
                    "options": [
                        {
                            "value": "left",
                            "label": "Left"
                        },
                        {
                            "value": "right",
                            "label": "Right"
                        }
                    ],
                    "default": "left"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Collection Complete"
        }
    ]
}
{% endschema %}