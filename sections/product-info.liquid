{% style %}
{% endstyle %}

<div class="product-info">
    <img src="{{ section.settigns.image | img_url: 'master' }}" width="100%" height="100%" alt="product-image">
    <div class="product-info-icons">
        {% for block in section.blocks %}
            {% if block.type == "icon" %}
                <div class="product-info-icon">
                    <img src="{{ block.settings.image | img_url: 'master' }}" width="100%" height="100%" alt="block image">
                    <span>{{ block.settings.content }}</span>
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <span>{{ section.settings.content }}</span>
    <div class="product-info-divs">
        {% for block in section.blocks %}
            {% if block.type == "block" %}
                <div class="product-info-div">
                    <span>{{ block.settings.content }}</span>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>

{% schema %}
{
    "name": "Product Info",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content"
        },
        {
            "type": "select",
            "id": "first_num",
            "label": "First Block columns",
            "options": [
                {
                    "label": "2",
                    "value": "2"
                },
                {
                    "label": "3",
                    "value": "3"
                }
            ],
            "default": "3"
        },
        {
            "type": "select",
            "id": "second_num",
            "label": "Second Block columns",
            "options": [
                {
                    "label": "2",
                    "value": "2"
                },
                {
                    "label": "3",
                    "value": "3"
                }
            ],
            "default": "3"
        }
    ],
    "blocks": [
        {
            "type": "icon",
            "name": "Icon Block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Content"
                },
            ]
        },
        {
            "type": "block",
            "name": "Block",
            "settings": [
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Content"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Product Info"
        }
    ]
}
{% endschema %}