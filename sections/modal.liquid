    "name": "Home Modal",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Header"
        },
        {
            "type": "text",
            "id": "content",
            "label": "Content"
        },
        {
            "type": "text",
            "id": "input",
            "label": "Input text"
        },
        {
            "type": "text",
            "id": "button",
            "label": "Button text"
        }
    ],
    "presets": [
        {
            "name": "Home Modal"
        }
    ]
}
{% endschema %}