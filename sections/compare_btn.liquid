{% style %}
    .section-{{ section.id }} {
        background-color: #111;
    }

    .section-{{ section.id }} .compare-btn {
        max-width: 1440px;
        margin: 0 auto;
        background-color: #292a33;
        padding: 50px 0;
        text-align: center;
    }
    
    .section-{{ section.id }} .compare-btn h2 {
        font-family: "Sen";
        font-weight: 600;
        font-size: 48px;
        color: white;
        text-align: center;
        line-height: 135%;
        padding: 0 16px;
        margin-bottom: 40px;
    }

    .section-{{ section.id }} .compare-btn a {
        width: fit-content;
        padding: 10px 20px;
        font-family: 'Sen';
        font-weight: 600;
        font-size: 24px;
        color: white;
        background-color: #ff0004;
        border: none;
        border-radius: 4px;
        margin: auto;
    }

    @media screen and (max-width: 1025px) {
        .section-{{ section.id }} .compare-btn h2 {
            font-size: 24px;
        }

        .section-{{ section.id }} .compare-btn a {
            font-size: 16px;
        }
    }

    @media screen and (max-width: 1025px) {
        .section-{{ section.id }} .compare-btn {
            padding-bottom:80px;
        }
    }
{% endstyle %}

<div class="section-{{ section.id }}">
    <div class="compare-btn">
        <h2>{{ section.settings.heading }}</h2>
        <a href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
    </div>
</div>

{% schema %}
{
    "name": "Compare Btn",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "url",
            "id": "link",
            "label": "Link"
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
        }
    ],
    "presets": [
        {
            "name": "Compare Btn"
        }
    ]
}
{% endschema %}