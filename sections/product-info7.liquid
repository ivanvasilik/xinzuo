{% style %}
    .section-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }} .product-info7 {
        display: flex;
        flex-direction: column;
        gap: 80px;
    }

    .section-{{ section.id }} .product-info7-header {
        width: 100%;
        max-width: 1080px;
        padding: 0 32px;
        margin: auto;
    }

    .section-{{ section.id }} .product-info7-header div {
        max-width: 640px;
        {% if section.settings.header_type == "center" %}
            margin: auto;
        {% endif %}
    }

    .section-{{ section.id }} .product-info7-header p {
        font-family: "Sen";
        font-weight: 500;
        font-size: 18px;
        color: #c1c4c7;
        margin: 0;
        {% if section.settings.header_type == "center" %}
            text-align: center;
        {% endif %}
    }

    .section-{{ section.id }} .product-info7-header h2 {
        font-family: "Sen";
        font-weight: 600;
        font-size: 64px;
        color: #f9f9f7;
        line-height: 125%;
        margin: 0;
        {% if section.settings.header_type == "center" %}
            text-align: center;
        {% else %}
            margin-bottom: 48px;
        {% endif %}
    }

    .section-{{ section.id }} .product-info7-header h2:last-child:after {
        content: ".";
        color: #fd3e36;
    }

    .section-{{ section.id }} .product-info7-header span {
        font-family: "Albert Sans";
        font-weight: 400;
        font-size: 18px;
        color: #86868b;
    }
    
    {% if section.blocks.size > 0 %}
        .section-{{ section.id }} .product-info7-img {
            display: flex;
            gap: 64px;
            width: 100%;
        }

        .section-{{ section.id }} .product-info7 img {
            width: calc(100% - 464px);
            object-fit: cover;
        }

        .section-{{ section.id }} .product-info7-blocks {
            display: flex;
            flex-direction: column;
            gap: 48px;
            padding: 24px 32px;
            max-width: 400px;
            justify-content: center;
        }

        .section-{{ section.id }} .product-info7-block h2 {
            font-family: "Sen";
            font-weight: 600;
            font-size: 36px;
            color: #f9f9f7;
            line-height: 135%;
            margin: 0;
            padding: 16px 0;
        }

        .section-{{ section.id }} .product-info7-block p {
            margin: 0;
            max-width: 240px;
        }

        .section-{{ section.id }} .product-info7-block img {
            width: 56px;
            height: 56px;
            margin-bottom: 24px;
        }

        .section-{{ section.id }} .product-info7-block span {
            font-family: "Sen";
            font-weight: 600;
            font-size: 22px;
            color: #86868b;
            line-height: 140%;
        }
    {% endif %}

    .section-{{ section.id }} .product-info7 > span {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 24px 32px;
        text-align: center;
        font-family: "Albert Sans";
        font-weight: 400;
        font-size: 18px;
        color: #86868b;
        line-height: 150%;
    }

    @media screen and (max-width: 1025px) {
        .section-{{ section.id }} .product-info7-header h2 {
            font-size: 40px;
            padding: 0;
        }

        .section-{{ section.id }} .product-info7 {
            gap: 40px;
        }
    }
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section class="section-{{ section.id }} section section--page-width color-{{ section.settings.color_scheme }}">
    <div class="product-info7">
        <div class="product-info7-header">
            <div>
                <p>{{ section.settings.heading_title }}</p>
                <span>{{ section.settings.heading_content }}</span>
            </div>
        </div>
        <div class="product-info7-img">
            <img src="{{ section.settings.img | img_url: 'master' }}" width="100%" height="100%" alt="product-info7">
            <div class="product-info7-blocks">
                {% if section.blocks.size > 0 %}
                    {% for block in section.blocks %}
                        <div class="product-info7-block">
                            <span>{{ block.settings.content }}</span>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
        <span>{{ section.settings.heading_footer }}</span>
    </div>
</section>

{% schema %}
{
    "name": "Product Info7",
    "settings": [
        {
            "type": "text",
            "id": "heading_title",
            "label": "Header Title"
        },
        {
            "type": "richtext",
            "id": "heading_content",
            "label": "Header Content",
        },
        {
            "type": "select",
            "id": "header_type",
            "label": "Header Position",
            "options": [
                {
                    "label": "Left",
                    "value": "left"
                },
                {
                    "label": "Center",
                    "value": "center"
                }
            ]
        },
        {
            "type": "image_picker",
            "id": "img",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "heading_footer",
            "label": "Header Footer"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Padding Top",
            "min": 30,
            "max": 120,
            "step": 2,
            "unit": "px",
            "default": 80
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Padding Bottom",
            "min": 30,
            "max": 120,
            "step": 2,
            "unit": "px",
            "default": 80
        },
    ],
    "blocks": [
        {
            "type": "block",
            "name": "Block",
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Content"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Product Info7"
        }
    ]
}
{% endschema %}