{% style %}
  .section-{{ section.id }} {
    background-color: #111;
  }

  .section-{{ section.id }} > div {
    max-width: 1440px;
    margin: auto;
    padding: 96px 80px 48px;
    overflow: hidden;
  }

  .section-{{ section.id }} img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      cursor: pointer;
  }

  .section-{{ section.id }} h2 {
      font-family: "Sen";
      font-weight: 600;
      font-size: 64px;
      color: #fff;
  }

  .section-{{ section.id }} .home-price {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .section-{{ section.id }} .home-price span.prices {
    font-family: "Sen";
    font-weight: 600;
    font-size: 22px;
    color: #c1c4c7
  }

  .section-{{ section.id }} .home-price span.compare-price {
    font-size: 19px;
    text-decoration: line-through;
    color: #c9c9cc;
  }

  .section-{{ section.id }} .home-price a {
    background-color: transparent;
    border: none;
    display: flex;
    font-family: "Sen";
    font-weight: 600;
    font-size: 14px;
    color: #c1c4c7;
    border-bottom: 2px solid #444444;
    padding: 0;
    line-height: 250%;
    align-items: center;
    gap: 15px;
  }

  .section-{{ section.id }} .home-price a img {
    width: 20px;
    height: 20px;
    margin: 0;
  }

  .section-{{ section.id }} .swiper-slide .active {
    height: 360px;
    overflow: visible;
  }

  .section-{{ section.id }} .home-menu-list {
    margin-bottom: 64px;
    overflow: hidden;
    border-bottom: 1px solid #c9c9cc;
  }

  .section-{{ section.id }} .home-menu-list > div {
    position: relative;
    max-width: fit-content;
    overflow: hidden;
  }

  .section-{{ section.id }} .home-menu-list ul {
    display: flex;
    list-style: none;
    gap: 40px;
    padding: 0;
    width: fit-content;
    margin: 0;
    position: relative;
  }

  .section-{{ section.id }} .product-products-div1 {
    position: absolute;
    top: 0;
    height: 100%;
    padding: 5px;
    align-items: center;
    background: #212121;
    backdrop-filter: blur(2px);
    left: 0;
    display: none;
    cursor: pointer;
  }

  .section-{{ section.id }} .product-products-div2 {
    position: absolute;
    top: 0;
    height: 100%;
    padding: 5px;
    display: flex;
    align-items: center;
    background: #212121;
    backdrop-filter: blur(2px);
    right: 0;
    cursor: pointer;
  }

  .section-{{ section.id }} .home-menu-list ul li {
    padding: 16px 0;
    color: #c9c9cc;
    cursor: pointer;
  }

  .section-{{ section.id }} .home-menu-list ul li p {
    width: max-content;
  }

  .section-{{ section.id }} .home-menu-list ul li.active {
    color: #fff;
    border-bottom: 1px solid #fff;
  }

  .section-{{ section.id }} .home-slider {
    display: none;
  }

  .section-{{ section.id }} .home-slider.active {
    display: block;
  }

  .section-{{ section.id }} .home-collection p {
    font-size: 18px;
    font-family: "Sen";
    font-weight: 500;
    color: #c9c9cc;
  }

  .section-{{ section.id }} .home-collection.active p {
    color: #fff;
  }

  .section-{{ section.id }} .swiper {
    overflow: visible;
  }

  .section-{{ section.id }} .swiper-slide {
    display: flex;
    flex-direction: column;
    justify-content: end;
    transition: height 0.5s ease-in-out !important;
    overflow: hidden;
    position: relative;
  }

  .section-{{ section.id }} .swiper-slide h2 {
    padding: 24px 12px 0;
    margin: 0;
    font-family: "Sen";
    font-weight: 600;
    font-size: 36px;
    color: #fff;
  }

  .section-{{ section.id }} .swiper-slide img {
    width: 100%;
    object-fit: cover;
  }
  
  .section-{{ section.id }} .swiper-buttons {
    display: flex;
    margin-top: 64px;
    padding: 0 32px 16px;
    gap: 16px;
    justify-content: flex-end;
  }

  .section-{{ section.id }} .swiper-buttons div {
    position: static;
    width: 48px;
    height: 48px;
    padding: 12px;
    background: rgba(255, 255, 255, 0.05);
  }

  .section-{{ section.id }} .swiper-buttons div:after {
    display: none;
  }

  .section-{{ section.id }} .swiper-buttons div[aria-disabled="true"] {
    opacity: 0.5;
  }

  .section-{{ section.id }} .jdgm-prev-badge__text {
    font-family: "Albert Sans";
    font-weight: 400;
    font-size: 18px;
    color: #c9c9cc;
  }

  .section-{{ section.id }} .product-price {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 12px;
  }

  .section-{{ section.id }} .product-price span.prices {
    font-family: "Sen";
    font-weight: 600;
    font-size: 36px;
    color: #fff
  }
      
  .section-{{ section.id }} .product-price span.compare-price {
    font-size: 22px;
    text-decoration: line-through;
    color: #828282;
  }

  .section-{{ section.id }} .product-link {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: "Sen";
    font-size: 16px;
    font-weight: 600;
    color: #fff;
    line-height: 250%;
    border-bottom: 1px solid #c9c9cc;
  }

  @media screen and (max-width: 1300px) {
    .section-{{ section.id }} > div {
      padding: 48px 30px;
    }
  }

  @media screen and (max-width: 1025px) {
    .section-{{ section.id }} h2 {
      font-size: 36px;
    }

    .section-{{ section.id }} .swiper-slide h2 {
      font-size: 22px;
    }

    .section-{{ section.id }} .product-price span.prices {
      font-size: 22px;
    }

    .section-{{ section.id }} .product-price span.compare-price {
      font-size: 19px;
    }

    .section-{{ section.id }} .jdgm-prev-badge__text {
      font-size: 16px;
    }

    .section-{{ section.id }} .product-link {
      font-size: 14px;
    }
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }} .swiper-buttons {
      margin-top: 32px;
    }

    .section-{{ section.id }} .swiper-buttons div {
      width: 40px;
      height: 40px;
      padding: 8px;
    }

    .section-{{ section.id }} > div {
      padding: 48px 16px;
    }

    .section-{{ section.id }} h2 {
      font-size: 28px;
      margin-bottom: 12px;
    }
    
    .section-{{ section.id }} .home-menu-list {
      margin-bottom: 48px;
    }

    .section-{{ section.id }} .home-menu-list ul {
      gap: 32px;
    }
  }

  @media screen and (max-width: 650px) {
    .section-{{ section.id }} .home-menu-list ul li {
      padding: 10px 0;
    }
  }
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section class="section-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <div class="sec-gradient">
    <h2>{{ section.settings.heading }}</h2>
    <div class="home-menu-list">
      <div>
        <ul class="product-products-ul">
          {% for block in section.blocks %}
            <li
              class="home-collection home-collection-{{ forloop.index }} {% if forloop.index == 1 %}active{% endif %}"
              onclick="homeslider({{ forloop.index }})"
            >
              <p>{{ block.settings.product_name }}</p>
            </li>
          {% endfor %}
        </ul>
        <div class="product-products-div1" onclick="productUlPrev()">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
            <g clip-path="url(#clip0_4235_8014)">
              <path d="M12.5 3.91602L6.25 10.166L12.5 16.416" stroke="#c9c9cc" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            </g>
            <defs>
              <clipPath id="clip0_4235_8014">
                <rect width="20" height="20" fill="white" transform="translate(0 0.166016)"/>
              </clipPath>
            </defs>
          </svg>
        </div>
        <div class="product-products-div2" onclick="productUlNext()">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="21" viewBox="0 0 20 21" fill="none">
            <g clip-path="url(#clip0_4235_8014)">
              <path d="M7.5 3.91602L13.75 10.166L7.5 16.416" stroke="#c9c9cc" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
            </g>
            <defs>
              <clipPath id="clip0_4235_8014">
                <rect width="20" height="20" fill="white" transform="translate(0 0.166016)"/>
              </clipPath>
            </defs>
          </svg>
        </div>
      </div>
    </div>
    {% for block in section.blocks %}
      {% assign product = block.settings.product %}
      <div class="home-slider home-slider-{{ forloop.index }} {% if forloop.index == 1 %}active{% endif %}">
        <div class="home-swiper">
          <div class="swiper-wrapper">
            {% for variant in product.variants %}
              <div class="swiper-slide">
                <a href="{{ variant.url }}"><img src="{{ variant.featured_image | img_url: 'master' }}" width="100%" height="100%" alt="home slider {{ forloop.index }}"></a>
                <h2>{{ variant.title }}</h2>
                <!-- Start of Judge.me Rating Widget -->
                <div class="jdgm-widget jdgm-preview-badge" 
                  data-id="{{ product.id }}" 
                  data-auto-install="false"
                  style="padding: 12px;"
                >
                {{ product.metafields.judgeme.badge }}
                </div>
                <!-- End of Judge.me Rating Widget -->
                <div class="product-price">
                  <span class="prices">
                    <span class="sale-price">{{ variant.price | money }}</span>
                    <span class="compare-price">{{ variant.compare_at_price | money }}</span>
                  </span>
                  <a class="product-link" href="{{ variant.url }}">
                    <span>SHOP NOW</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
                      <g clip-path="url(#clip0_6018_26691)">
                        <path d="M5 15L15 5" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        <path d="M6.875 5H15V13.125" stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                      </g>
                      <defs>
                        <clipPath id="clip0_6018_26691">
                          <rect width="20" height="20" fill="white"/>
                        </clipPath>
                      </defs>
                    </svg>
                  </a>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
        <div class="swiper-buttons">
          <div class="swiper-button-prev">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
              <g clip-path="url(#clip0_4030_26868)">
                <path d="M15 19.5L7.5 12L15 4.5" stroke="#c9c9cc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </g>
              <defs>
                <clipPath id="clip0_4030_26868">
                  <rect width="24" height="24" fill="white"/>
                </clipPath>
              </defs>
            </svg>
          </div>
          <div class="swiper-button-next">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
              <g clip-path="url(#clip0_4030_26872)">
                <path d="M9 4.5L16.5 12L9 19.5" stroke="#c9c9cc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </g>
              <defs>
                <clipPath id="clip0_4030_26872">
                  <rect width="24" height="24" fill="white"/>
                </clipPath>
              </defs>
            </svg>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

<script>
  const homeswiper = new Swiper('.home-swiper', {
    slidesPerView: 1.3,
    spaceBetween: 10,
    breakpoints: {
      768: {
        slidesPerView: 1.6,
        spaceBetween: 20,
      },
      1024: {
        slidesPerView: 2.6,
        spaceBetween: 30,
      },
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
  
  const homeslider = (num) => {
    const homeCollections = document.querySelectorAll('.home-collection');
    const homeSliders = document.querySelectorAll('.home-slider');
    const homeCollection = document.querySelector(`.home-collection-${num}`);
    const homeSlider = document.querySelector(`.home-slider-${num}`);

    homeCollections.forEach((homeCollection) => {
      homeCollection.classList.remove('active');
    });
    homeSliders.forEach((homeSlider) => {
      homeSlider.classList.remove('active');
    });
    homeCollection.classList.add('active');
    homeSlider.classList.add('active');
  };
  
  const btn = document.querySelector('.product-products-div2');
  const btn_width = btn.offsetWidth;

  const changeBtn = () => {
    const ul = document.querySelector('.product-products-ul');
    const prevBtn = document.querySelector('.product-products-div1');
    const nextBtn = document.querySelector('.product-products-div2');
    let currentPosition;
    if (ul.style.transform != "") currentPosition = parseFloat(ul.style.transform.match(/-?\d+\.?\d*/)[0]);
    else currentPosition = 0;
    console.log(ul.parentElement.offsetWidth);
    console.log(ul.offsetWidth);
    if (ul.parentElement.offsetWidth >= ul.offsetWidth) {
      prevBtn.style.display = "none";
      nextBtn.style.display = "none";
    }
    else {
      if (-ul.parentElement.offsetWidth + ul.scrollWidth + currentPosition + btn_width < 0) {
        ul.style.transform = `translate(${ul.parentElement.offsetWidth - ul.scrollWidth - btn_width}px)`;
        nextBtn.style.display = "none";
      }
      if (currentPosition > 0) {
        ul.style.transform = `translate(0)`;
        prevBtn.style.display = "none";
      }
    }
  }

  const productUlNext = () => {
    const prevBtn = document.querySelector('.product-products-div1');
    const nextBtn = document.querySelector('.product-products-div2');
    const ul = document.querySelector('.product-products-ul');
    let currentPosition;
    if (ul.style.transform != "") currentPosition = parseFloat(ul.style.transform.match(/-?\d+\.?\d*/)[0]);
    else currentPosition = 0;
    ul.style.transform = `translate(${currentPosition - 100}px)`;
    prevBtn.style.display = "flex";
    changeBtn();
  }

  const productUlPrev = () => {
    const prevBtn = document.querySelector('.product-products-div1');
    const nextBtn = document.querySelector('.product-products-div2');
    const ul = document.querySelector('.product-products-ul');
    let currentPosition;
    if (ul.style.transform != "") currentPosition = parseFloat(ul.style.transform.match(/-?\d+\.?\d*/)[0]);
    else currentPosition = 0;
    ul.style.transform = `translate(${currentPosition + 100}px)`;
    nextBtn.style.display = "flex";
    changeBtn();
  }

  changeBtn();
</script>

