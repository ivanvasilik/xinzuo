{% javascript %}
  const url = new URL(window.location.href);
  if (url.hash) {
    document.addEventListener(
      'DOMContentLoaded',
      () => {
        const card = document.getElementById(url.hash.slice(1));
        if (card) {
          card.scrollIntoView({ behavior: 'instant' });
        }
      },
      { once: true }
    );
  }

  // Mobile product card buttons
  function initMobileProductButtons() {
    if (window.innerWidth >= 750) return;
    
    const productCards = document.querySelectorAll('.product-grid__item');
    
    productCards.forEach(card => {
      // Skip if already processed
      if (card.querySelector('.mobile-btn-row')) return;
      
      const productLink = card.querySelector('a[href*="/products/"]');
      const productCard = card.querySelector('product-card');
      if (!productLink || !productCard) return;
      
      const productUrl = productLink.getAttribute('href');
      const variantMatch = productUrl.match(/variant=(\d+)/);
      const variantId = variantMatch ? variantMatch[1] : null;
      
      // Create button row
      const btnRow = document.createElement('div');
      btnRow.className = 'mobile-btn-row';
      
      // View Details button (secondary/subtle)
      const viewBtn = document.createElement('a');
      viewBtn.href = productUrl;
      viewBtn.className = 'mobile-btn mobile-btn--secondary';
      viewBtn.textContent = 'View Details';
      
      // Add to Cart button (primary/red)
      const cartBtn = document.createElement('button');
      cartBtn.type = 'button';
      cartBtn.className = 'mobile-btn mobile-btn--primary';
      cartBtn.textContent = 'Add to Cart';
      cartBtn.dataset.variantId = variantId;
      
      cartBtn.addEventListener('click', async (e) => {
        e.preventDefault();
        e.stopPropagation();
        
        if (!variantId) {
          window.location.href = productUrl;
          return;
        }
        
        cartBtn.textContent = 'Adding...';
        cartBtn.disabled = true;
        
        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ items: [{ id: parseInt(variantId), quantity: 1 }] })
          });
          
          if (response.ok) {
            cartBtn.textContent = 'Added âœ“';
            setTimeout(() => {
              cartBtn.textContent = 'Add to Cart';
              cartBtn.disabled = false;
            }, 2000);
            
            // Update cart count if cart icon exists
            document.dispatchEvent(new CustomEvent('cart:refresh'));
          } else {
            throw new Error('Failed to add');
          }
        } catch (err) {
          cartBtn.textContent = 'View Options';
          cartBtn.addEventListener('click', () => window.location.href = productUrl, { once: true });
        }
      });
      
      btnRow.appendChild(viewBtn);
      btnRow.appendChild(cartBtn);
      
      // Insert after product-card content
      const content = card.querySelector('.product-card__content') || productCard;
      if (content) {
        content.appendChild(btnRow);
      }
    });
  }
  
  // Initialize on load and after dynamic content loads
  document.addEventListener('DOMContentLoaded', initMobileProductButtons);
  
  // Re-run for infinite scroll
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.addedNodes.length) {
        setTimeout(initMobileProductButtons, 100);
      }
    });
  });
  
  document.addEventListener('DOMContentLoaded', () => {
    const grid = document.querySelector('.product-grid');
    if (grid) {
      observer.observe(grid, { childList: true, subtree: true });
    }
  });
{% endjavascript %}

{% comment %} We always render this full-width, as the child blocks have width: page/full settings {% endcomment %}
<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<results-list
  class="section product-grid-container color-{{ section.settings.color_scheme }}"
  style="--padding-block-start: {{ section.settings.padding-block-start }}px; --padding-block-end: {{ section.settings.padding-block-end }}px;"
  section-id="{{ section.id }}"
>
  {% render 'skip-to-content-link', href: '#ResultsList', text: 'accessibility.skip_to_results_list' %}

  <div
    class="collection-wrapper grid gap-style custom-filter-layout"
  >
    {% render 'custom-collection-filters' %}

    {% paginate collection.products by 24 %}
      {% capture children %}
        {% for product in collection.products %}
          {% unless product.tags contains 'engraving-fee' %}
            <li
              id="{{ section.id }}-{{ product.id }}"
              class="product-grid__item product-grid__item--{{ forloop.index0 }}"
              data-page="{{ paginate.current_page }}"
              data-product-id="{{ product.id }}"
              ref="cards[]"
            >
              {% # theme-check-disable %}
              {% content_for 'block', type: '_product-card', id: 'product-card', closest.product: product %}
              {% # theme-check-enable %}
            </li>
          {% endunless %}
        {% endfor %}
      {% endcapture %}

      {% render 'product-grid',
        section: section,
        children: children,
        products: collection.products,
        paginate: paginate
      %}
    {% endpaginate %}
  </div>
</results-list>

{% stylesheet %}
  /* =============================================
     MOBILE: Single Column, Compact & Aligned
     ============================================= */
  @media screen and (max-width: 749px) {
    /* Single column grid */
    .product-grid {
      grid-template-columns: 1fr !important;
      gap: 0 !important;
    }
    
    /* Card container with subtle divider */
    .product-grid__item {
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      padding-bottom: 16px !important;
      margin-bottom: 16px !important;
    }
    
    .product-grid__item:last-child {
      border-bottom: none;
      margin-bottom: 0 !important;
    }
    
    /* Ensure card structure displays properly */
    .product-grid__item .product-grid__card {
      display: flex !important;
      flex-direction: column !important;
      gap: 8px !important;
    }
    
    /* Ensure product card and images show */
    .product-grid__item .product-card {
      display: block !important;
    }
    
    .product-grid__item .product-card__image,
    .product-grid__item .product-card__media,
    .product-grid__item a[href*="/products/"] > div:first-child {
      display: block !important;
      width: 100% !important;
    }
    
    /* Content section - inline title + price */
    .product-grid__item .product-card__content {
      display: flex !important;
      flex-wrap: nowrap !important;
      align-items: center !important;
      justify-content: space-between !important;
      gap: 12px !important;
    }
    
    /* Title - left side, truncated */
    .product-grid__item .product-card__content > a.contents,
    .product-grid__item .product-card__content > .text-block {
      flex: 1 !important;
      min-width: 0 !important;
      overflow: hidden !important;
    }
    
    .product-grid__item .text-block.rte p,
    .product-grid__item a.contents p {
      font-size: 0.875rem !important;
      font-weight: 500 !important;
      line-height: 1.3 !important;
      margin: 0 !important;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    /* Price - right side */
    .product-grid__item product-price {
      flex-shrink: 0 !important;
    }
    
    .product-grid__item product-price .price {
      font-size: 0.875rem !important;
      font-weight: 600 !important;
      color: var(--color-foreground) !important;
      white-space: nowrap;
    }
    
    /* Hide default quick-add */
    .product-grid__item .quick-add {
      display: none !important;
    }
    
    /* ---- Button Row ---- */
    .mobile-btn-row {
      display: flex !important;
      gap: 8px !important;
      margin-top: 10px !important;
    }
    
    .mobile-btn {
      flex: 1;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 10px 12px;
      font-size: 0.6875rem;
      font-weight: 600;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      text-decoration: none;
      border-radius: 4px;
      cursor: pointer;
      transition: all 0.2s ease;
      text-align: center;
    }
    
    /* View Details: white outline, subtle */
    .mobile-btn--secondary {
      background: transparent;
      color: rgba(255, 255, 255, 0.8);
      border: 1px solid rgba(255, 255, 255, 0.35);
    }
    
    .mobile-btn--secondary:hover {
      border-color: rgba(255, 255, 255, 0.6);
      color: #fff;
    }
    
    /* Add to Cart: red background, primary CTA */
    .mobile-btn--primary {
      background: #dc2626;
      color: #fff;
      border: 1px solid #dc2626;
    }
    
    .mobile-btn--primary:hover {
      background: #b91c1c;
      border-color: #b91c1c;
    }
    
    .mobile-btn--primary:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  }

  /* =============================================
     DESKTOP: Multi-column grid
     ============================================= */
  @media screen and (min-width: 750px) {
    .product-grid__item .text-block.rte p,
    .product-grid__item a.contents p {
      font-size: 0.9375rem !important;
      font-weight: 500 !important;
      line-height: 1.35 !important;
      margin: 0 !important;
    }
    
    .product-grid__item product-price .price {
      font-size: 0.875rem !important;
      font-weight: 400 !important;
      color: rgba(255, 255, 255, 0.7) !important;
    }
    
    .product-grid__item product-price .price--on-sale .price__sale {
      font-weight: 500 !important;
      color: var(--color-foreground) !important;
    }
  }

  .custom-filter-layout {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  @media (min-width: 750px) {
    .custom-filter-layout {
      flex-direction: row;
      align-items: flex-start;
      gap: 24px;
    }
  }

  .main-collection-grid {
    grid-column: var(--grid-column--mobile);
    flex: 1;

    @media screen and (min-width: 750px) {
      grid-column: var(--grid-column--desktop);
    }
  }

  .collection-wrapper {
    @media screen and (min-width: 750px) {
      grid-template-columns:
        1fr repeat(
          var(--centered-column-number),
          minmax(0, calc((var(--page-width) - var(--page-margin) * 2) / var(--centered-column-number)))
        )
        1fr;
    }
  }

  .collection-wrapper:has(.facets-block-wrapper--full-width),
  .collection-wrapper:has(.collection-wrapper--full-width) {
    @media screen and (min-width: 750px) {
      grid-column: 1 / -1;
      grid-template-columns:
        minmax(var(--page-margin), 1fr) repeat(
          var(--centered-column-number),
          minmax(0, calc((var(--page-width) - var(--page-margin) * 2) / var(--centered-column-number)))
        )
        minmax(var(--page-margin), 1fr);
    }
  }

  .collection-wrapper:has(.facets--vertical) .facets-block-wrapper--vertical:not(.hidden) ~ .main-collection-grid {
    @media screen and (min-width: 750px) {
      grid-column: var(--facets-vertical-col-width) / var(--full-width-column-number);
    }
  }

  .collection-wrapper:has(.facets-block-wrapper--vertical:not(#filters-drawer)):has(.collection-wrapper--full-width) {
    @media screen and (min-width: 750px) {
      grid-column: 1 / -1;
      grid-template-columns: 0fr repeat(var(--centered-column-number), minmax(0, 1fr)) 0fr;
    }
  }

  :is(.collection-wrapper--full-width, .collection-wrapper--full-width-on-mobile)
    [product-grid-view='default']
    .product-grid__card {
    @media screen and (max-width: 749px) {
      padding-inline-start: max(var(--padding-xs), var(--padding-inline-start));
      padding-inline-end: max(var(--padding-xs), var(--padding-inline-end));
    }
  }

  :is(.collection-wrapper--full-width, .collection-wrapper--full-width-on-mobile)
    [product-grid-view='mobile-single']
    .product-grid__card {
    @media screen and (max-width: 749px) {
      padding-inline-start: max(var(--padding-xs), var(--padding-inline-start));
      padding-inline-end: max(var(--padding-xs), var(--padding-inline-end));
    }
  }

  /* Make product media go edge-to-edge by using negative margins */
  :is(.collection-wrapper--full-width) .card-gallery,
  :is(.collection-wrapper--full-width-on-mobile) .card-gallery {
    @media screen and (max-width: 749px) {
      margin-inline-start: calc(-1 * max(var(--padding-xs), var(--padding-inline-start)));
      margin-inline-end: calc(-1 * max(var(--padding-xs), var(--padding-inline-end)));
    }
  }
{% endstylesheet %}

