{% style %}
    .section-{{ section.id }} {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    .section-{{ section.id }} .product-series {
        display: flex;
        flex-direction: column;
        gap: 64px;
    }

    .section-{{ section.id }} .product-series span {
        font-family: "Albert Sans";
        font-weight: 400;
        font-size: 18px;
        color: #c9c9cc;
        line-height: 150%;
    }

    .section-{{ section.id }} .product-series p {
        padding: 24px 32px;
        width: 100%;
        max-width: 720px;
        margin: auto;
        text-align: center;
    }

    .section-{{ section.id }} .product-series img {
        max-width: 816px;
        margin: auto;
    }

    .section-{{ section.id }} .product-series h2 {
        font-family: "Sen";
        font-weight: 600;
        font-size: 64px;
        color: #fff;
        text-align: center;
        margin: 0;
        line-height: 125%;
    }

    {% if section.settings.width == "full" %}
        .section-{{ section.id }} {
            padding-left: 0 !important;
            padding-right: 0 !important;
        }
    {% endif %}

    @media screen and (max-width: 1025px) {
        .section-{{ section.id }} .product-series h2 {
            font-size: 36px;
        }

        .section-{{ section.id }} {
            padding: 48px 0;
        }
    }
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section class="section-{{ section.id }} section section--page-width color-{{ section.settings.color_scheme }}">
    <div class="product-series">
        <span>{{ section.settings.title }}</span>
        <img src="{{ section.settings.image | image_url: width: 800 }}" width="100%" height="100%" alt="product series">
        <span>{{ section.settings.content }}</span>
    </div>
</section>

{% schema %}
{
    "name": "Product Series",
    "settings": [
        {
            "type": "select",
            "id": "width",
            "label": "Width",
            "options": [
                {
                    "label": "Page",
                    "value": "page"
                },
                {
                    "label": "Full",
                    "value": "full"
                }
            ],
            "default": "page"
        },
        {
            "type": "richtext",
            "id": "title",
            "label": "Title"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "richtext",
            "id": "content",
            "label": "Content"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        },
        {
            "type": "range",
            "id": "padding_top",
            "label": "Padding Top",
            "min": 30,
            "max": 120,
            "step": 2,
            "unit": "px",
            "default": 80
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "label": "Padding Bottom",
            "min": 30,
            "max": 120,
            "step": 2,
            "unit": "px",
            "default": 80
        }
    ],
    "presets": [
        {
            "name": "Product Series"
        }
    ]
}
{% endschema %}