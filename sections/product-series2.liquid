{% style %}
    .section-{{ section.id }} {
        padding: 80px 32px 0;
    }

    .section-{{ section.id }} .product-series2 {
        background-color: #171717;
        border-radius: 16px;
        padding: 64px 0;
    }

    .section-{{ section.id }} .product-series2-header {
        display: flex;
        justify-content: space-between;
        max-width: 1160px;
        width: 100%;
        margin: auto;
        margin-bottom: 24px;
    }

    .section-{{ section.id }} span {
        font-family: "Albert Sans";
        font-weight: 400;
        font-size: 18px;
        color: #86868b;
        line-height: 150%;
    }

    .section-{{ section.id }} strong {
        font-weight: 700;
        color: #f9f9f7;
    }

    .section-{{ section.id }} h2 {
        font-family: "Sen";
        font-weight: 600;
        font-size: 48px;
        color: #f9f9f7;
        line-height: 130%;
        margin: 0;
    }

    .section-{{ section.id }} p {
        margin: 0;
    }

    .section-{{ section.id }} .product-series2-header div {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    .section-{{ section.id }} .product-series2-header > span {
        font-family: "Sen";
        font-weight: 600;
        font-size: 22px;
        color: #86868b;
        line-height: 140%;
    }

    .section-{{ section.id }} .product-series-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        max-width: 1160px;
        width: 100%;
        margin: auto;
        margin-bottom: 64px;    
    }

    .section-{{ section.id }} .product-series-block {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: calc(100% / 3 - 32px / 3);
        background-color: #000;
        height: 245px;
        padding: 20px 26px;
        text-align: center;
    }

    .section-{{ section.id }} .product-series-block img {
        height: 80px;
        object-fit: cover;
    }

    .section-{{ section.id }} .product-series-block .icon {
        width: 80px;
        height: 80px;
        margin: auto;
    }

    .section-{{ section.id }} .product-series-footer {
        max-width: 1160px;
        width: 100%;
        text-align: center;
    }

    .section-{{ section.id }} .product-series-footer img {
        width: auto;
        height: 32px;
    }

    .section-{{ section.id }} .product-series-footer span {
        display: block;
        margin-bottom: 16px;
    }

    .section-{{ section.id }} .product-series-footer a {
        color: #fd3e36;
    }
{% endstyle %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>
<section class="section-{{ section.id }} section section--page-width color-{{ section.settings.color_scheme }}">
    <div class="product-series2">
        <div class="product-series2-header">
            <div>
                <span>{{ section.settings.header_title }}</span>
                <span>{{ section.settings.header_left }}</span>
            </div>
            <span>{{ section.settings.header_right }}</span>
        </div>
        <div class="product-series-grid">
            {% for block in section.blocks %}
                <div class="product-series-block" {% if block.settings.image_type == "background" and block.settings.image != blank %}style="background-image: url({{ block.settings.image | img_url: 'master' }});background-size: 100% 100%;justify-content: flex-end"{% endif %}>
                    {% if block.settings.image != blank and block.settings.image_type != "background" %}
                        <img src="{{ block.settings.image | img_url: 'master' }}" width="100%" height="100%" alt="" {% if block.settings.image_type == "icon" %}class="icon"{% endif %}>
                    {% endif %}
                    <span>{{ block.settings.content }}</span>
                </div>
            {% endfor %}
        </div>
        <div class="product-series-footer">
            <img src="{{ section.settings.footer_img | img_url: 'master' }}" width="100%" height="100%" alt="">
            <span>{{ section.settings.footer_content }}</span>
            {% assign collection = product.collections.first %}
            <a href="/collections">Shop the {{ collection.title }} â€º</a>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Product Series2",
    "settings": [
        {
            "type": "richtext",
            "id": "header_title",
            "label": "Header Title"
        },
        {
            "type": "richtext",
            "id": "header_left",
            "label": "Header Left"
        },
        {
            "type": "richtext",
            "id": "header_right",
            "label": "Header Right"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        },
        {
            "type": "image_picker",
            "id": "footer_img",
            "label": "Footer Logo"
        },
        {
            "type": "text",
            "id": "footer_content",
            "label": "Footer Content"
        }
    ],
    "blocks": [
        {
            "type": "block",
            "name": "Block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "select",
                    "id": "image_type",
                    "label": "Image Type",
                    "options": [
                        {
                            "label": "Icon",
                            "value": "icon"
                        },
                        {
                            "label": "Background",
                            "value": "background"
                        },
                        {
                            "label": "Normal",
                            "value": "normal"
                        }
                    ],
                    "default": "normal"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Content"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Product Series2"
        }
    ]
}
{% endschema %}