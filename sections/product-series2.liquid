{% style %}
    .section-{{ section.id }} {
        padding: 80px 32px 0;
        background-color: #171717;
        border-radius: 16px;
    }

    .section-{{ section.id }} .product-series2 {
        padding: 64px 0;
    }

    .section-{{ section.id }} .product-series2-header {
        display: flex;
        justify-content: space-between;
        max-width: 1160px;
        width: 100%;
        margin: auto;
        margin-bottom: 24px;
    }

    .section-{{ section.id }} span {
        font-family: "Albert Sans";
        font-weight: 400;
        font-size: 18px;
        color: #c9c9cc;
        line-height: 150%;
    }

    .section-{{ section.id }} strong {
        font-weight: 700;
        color: #fff;
    }

    .section-{{ section.id }} h2 {
        font-family: "Sen";
        font-weight: 600;
        font-size: 48px;
        color: #fff;
        line-height: 130%;
        margin: 0;
    }

    .section-{{ section.id }} p {
        margin: 0;
    }

    .section-{{ section.id }} .product-series2-header div {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    .section-{{ section.id }} .product-series2-header > span {
        font-family: "Sen";
        font-weight: 600;
        font-size: 22px;
        color: #c9c9cc;
        line-height: 140%;
    }

    .section-{{ section.id }} .product-series-grid {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        max-width: 1160px;
        width: 100%;
        margin: auto;
        margin-bottom: 64px;    
    }

    .section-{{ section.id }} .product-series-block {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: calc(100% / 3 - 32px / 3);
        background-color: #000;
        height: 245px;
        padding: 20px 26px;
        text-align: center;
    }

    .section-{{ section.id }} .product-series-block img {
        height: 80px;
        object-fit: cover;
    }

    .section-{{ section.id }} .product-series-block .icon {
        width: 80px;
        height: 80px;
        margin: 0 auto;
    }

    .section-{{ section.id }} .product-series-footer {
        max-width: 1160px;
        width: 100%;
        text-align: center;
        margin: auto;
    }

    .section-{{ section.id }} .product-series-footer img {
        width: auto;
        height: 32px;
        margin: auto;
        margin-bottom: 14px;
    }

    .section-{{ section.id }} .product-series-footer span {
        display: block;
        margin-bottom: 16px;
    }

    .section-{{ section.id }} .product-series-footer a {
        color: #ff0004;
    }

    {% if section.settings.width == "full" %}
        .section-{{ section.id }} {
            padding-left: 0 !important;
            padding-right: 0 !important;
        }
    {% endif %}

    @media screen and (max-width: 1025px) {
        .section-{{ section.id }} h2 {
            font-size: 36px;
        }

        .section-{{ section.id }} .product-series2-header div {
            gap: 24px;
        }

        .section-{{ section.id }} .product-series-block {
            width: calc(50% - 8px);
        }

        .section-{{ section.id }} product-series2-header p {
            font-size: 19px;
        }
    }

    @media screen and (max-width: 750px) {
        .section-{{ section.id }} .product-series-block {
            width: 100%;
        }

        .section-{{ section.id }} .product-series2-header {
            flex-direction: column;
        }
        
        .section-{{ section.id }} .product-series2-header div {
            margin-bottom: 24px;
        }
    }
{% endstyle %}

