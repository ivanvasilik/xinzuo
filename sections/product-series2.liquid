            "label": "Header Left"
        },
        {
            "type": "richtext",
            "id": "header_right",
            "label": "Header Right"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:settings.color_scheme",
            "default": "scheme-1"
        },
        {
            "type": "image_picker",
            "id": "footer_img",
            "label": "Footer Logo"
        },
        {
            "type": "text",
            "id": "footer_content",
            "label": "Footer Content"
        }
    ],
    "blocks": [
        {
            "type": "block",
