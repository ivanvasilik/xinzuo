            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "select",
                    "id": "image_type",
                    "label": "Image Type",
                    "options": [
                        {
                            "label": "Icon",
                            "value": "icon"
                        },
                        {
                            "label": "Background",
                            "value": "background"
                        },
                        {
                            "label": "Normal",
                            "value": "normal"
                        }
                    ],
                    "default": "normal"
                },
                {
                    "type": "richtext",
                    "id": "content",
                    "label": "Content"
